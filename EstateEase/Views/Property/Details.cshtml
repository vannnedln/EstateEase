@model EstateEase.Models.ViewModels.PropertyDetailsViewModel

@{
    ViewData["Title"] = Model.Property.Title;
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Properties">Properties</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Property.Title</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Property Images Gallery -->
        <div class="col-lg-8 mb-4">
            @if (Model.Property.PropertyImages != null && Model.Property.PropertyImages.Any())
            {
                <div id="propertyCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner rounded shadow">
                        @{
                            bool isFirst = true;
                            foreach (var image in Model.Property.PropertyImages)
                            {
                                <div class="carousel-item @(isFirst ? "active" : "")">
                                    <img src="@image.ImagePath" class="d-block w-100" alt="Property Image" style="height: 500px; object-fit: cover;">
                                </div>
                                isFirst = false;
                            }
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

                <div class="row mt-3">
                    @{
                        int count = 0;
                        foreach (var image in Model.Property.PropertyImages)
                        {
                            if (count < 5) // Show only 5 thumbnail images
                            {
                                <div class="col">
                                    <img src="@image.ImagePath" class="img-thumbnail" alt="Property Image" 
                                         style="height: 80px; object-fit: cover; cursor: pointer;"
                                         onclick="$('#propertyCarousel').carousel(@count)">
                                </div>
                            }
                            count++;
                        }
                    }
                </div>
            }
            else
            {
                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 500px;">
                    <p class="text-muted">No images available</p>
                </div>
            }
        </div>

        <!-- Property Quick Info -->
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title fw-bold">@Model.Property.Title</h2>
                    <p class="text-muted mb-2">@Model.Property.Address</p>
                    
                    <div class="d-flex align-items-center mb-3">
                        <span class="badge bg-primary me-2">@Model.Property.PropertyType</span>
                        <span class="badge bg-success me-2">@Model.Property.Status</span>
                        <span class="badge bg-info">For @Model.Property.SellingType</span>
                    </div>
                    
                    <h3 class="text-primary fw-bold mb-4">$@Model.Property.Price.ToString("N0")</h3>
                    
                    <div class="row text-center g-3 mb-4">
                        <div class="col-4">
                            <div class="p-2 border rounded">
                                <div><i class="bi bi-building"></i></div>
                                <div class="small">@Model.Property.TotalFloors Floors</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="p-2 border rounded">
                                <div><i class="bi bi-rulers"></i></div>
                                <div class="small">@Model.Property.Size m²</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="p-2 border rounded">
                                <div><i class="bi bi-calendar"></i></div>
                                <div class="small">@Model.Property.CreatedAt.Year</div>
                            </div>
                        </div>
                    </div>
                    
                    @if (Model.IsUserLoggedIn)
                    {
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#scheduleModal">
                                <i class="bi bi-calendar-plus me-2"></i>Schedule Viewing
                            </button>
                            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#inquiryModal">
                                <i class="bi bi-chat-left-text me-2"></i>Send Inquiry
                            </button>
                            @if (Model.Property.SellingType == "Sale")
                            {
                                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#offerModal">
                                    <i class="bi bi-cash-coin me-2"></i>Make an Offer
                                </button>
                            }
                            <button class="btn btn-outline-danger" id="addToFavorites">
                                <i class="bi bi-heart me-2"></i>Add to Favorites
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-3">
                            <i class="bi bi-info-circle me-2"></i>
                            <a asp-area="Identity" asp-page="/Account/Login" class="alert-link">Sign in</a> to schedule a viewing, make an offer, or contact the agent.
                        </div>
                    }
                </div>
            </div>

            <!-- Agent Info -->
            @if (Model.Property.Agent != null)
            {
                <div class="card shadow-sm mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Listed by</h5>
                        <div class="d-flex align-items-center">
                            @if (!string.IsNullOrEmpty(Model.Property.Agent.ProfilePictureUrl))
                            {
                                <img src="@Model.Property.Agent.ProfilePictureUrl" class="rounded-circle me-3" alt="Agent" width="60" height="60">
                            }
                            else
                            {
                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                                    <i class="bi bi-person text-secondary" style="font-size: 1.5rem;"></i>
                                </div>
                            }
                            <div>
                                <h6 class="mb-1">@Model.Property.Agent.FirstName @Model.Property.Agent.LastName</h6>
                                <p class="text-muted mb-0 small">
                                    <i class="bi bi-telephone me-1"></i>@Model.Property.Agent.PhoneNumber
                                </p>
                                <p class="text-muted mb-0 small">
                                    <i class="bi bi-envelope me-1"></i>@Model.Property.Agent.Email
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Property Details -->
    <div class="row mt-4">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h4 class="mb-0">Property Details</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-house me-2"></i><strong>Type:</strong> @Model.Property.PropertyType</li>
                                <li class="mb-2"><i class="bi bi-rulers me-2"></i><strong>Size:</strong> @Model.Property.Size m²</li>
                                <li class="mb-2"><i class="bi bi-building me-2"></i><strong>Total Floors:</strong> @Model.Property.TotalFloors</li>
                                <li class="mb-2"><i class="bi bi-tag me-2"></i><strong>Status:</strong> @Model.Property.Status</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-calendar me-2"></i><strong>Listed:</strong> @Model.Property.CreatedAt.ToString("MMM dd, yyyy")</li>
                                <li class="mb-2"><i class="bi bi-cash me-2"></i><strong>Price:</strong> $@Model.Property.Price.ToString("N0")</li>
                                <li class="mb-2"><i class="bi bi-shop me-2"></i><strong>For:</strong> @Model.Property.SellingType</li>
                            </ul>
                        </div>
                    </div>

                    <h5 class="mb-3">Rooms & Spaces</h5>
                    <div class="row g-3 mb-4">
                        <div class="col-4 col-md-3 col-lg-2">
                            <div class="p-3 border rounded text-center">
                                <div><i class="bi bi-door-closed"></i></div>
                                <div class="mt-2">@Model.Property.Bedrooms</div>
                                <div class="small text-muted">Bedrooms</div>
                            </div>
                        </div>
                        <div class="col-4 col-md-3 col-lg-2">
                            <div class="p-3 border rounded text-center">
                                <div><i class="bi bi-water"></i></div>
                                <div class="mt-2">@Model.Property.Bathrooms</div>
                                <div class="small text-muted">Bathrooms</div>
                            </div>
                        </div>
                        <div class="col-4 col-md-3 col-lg-2">
                            <div class="p-3 border rounded text-center">
                                <div><i class="bi bi-cup-hot"></i></div>
                                <div class="mt-2">@Model.Property.Kitchen</div>
                                <div class="small text-muted">Kitchen</div>
                            </div>
                        </div>
                        <div class="col-4 col-md-3 col-lg-2">
                            <div class="p-3 border rounded text-center">
                                <div><i class="bi bi-people"></i></div>
                                <div class="mt-2">@Model.Property.Hall</div>
                                <div class="small text-muted">Hall</div>
                            </div>
                        </div>
                        <div class="col-4 col-md-3 col-lg-2">
                            <div class="p-3 border rounded text-center">
                                <div><i class="bi bi-door-open"></i></div>
                                <div class="mt-2">@Model.Property.Balcony</div>
                                <div class="small text-muted">Balcony</div>
                            </div>
                        </div>
                    </div>

                    <h5 class="mb-3">Amenities</h5>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi @(Model.Property.HasSwimmingPool ? "bi-check-circle-fill text-success" : "bi-x-circle text-muted")"></i>
                                    <span class="ms-2">Swimming Pool</span>
                                </li>
                                <li class="mb-2">
                                    <i class="bi @(Model.Property.HasParking ? "bi-check-circle-fill text-success" : "bi-x-circle text-muted")"></i>
                                    <span class="ms-2">Parking</span>
                                </li>
                                <li class="mb-2">
                                    <i class="bi @(Model.Property.HasGym ? "bi-check-circle-fill text-success" : "bi-x-circle text-muted")"></i>
                                    <span class="ms-2">Gym</span>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi @(Model.Property.HasSecurity ? "bi-check-circle-fill text-success" : "bi-x-circle text-muted")"></i>
                                    <span class="ms-2">Security</span>
                                </li>
                                <li class="mb-2">
                                    <i class="bi @(Model.Property.HasElevator ? "bi-check-circle-fill text-success" : "bi-x-circle text-muted")"></i>
                                    <span class="ms-2">Elevator</span>
                                </li>
                                <li class="mb-2">
                                    <i class="bi @(Model.Property.HasCCTV ? "bi-check-circle-fill text-success" : "bi-x-circle text-muted")"></i>
                                    <span class="ms-2">CCTV</span>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <h5 class="mb-3">Description</h5>
                    <div class="mb-4">
                        @Html.Raw(Model.Property.Content)
                    </div>

                    <h5 class="mb-3">Location</h5>
                    <div class="ratio ratio-16x9 mb-4">
                        <iframe 
                            src="https://maps.google.com/maps?q=@Uri.EscapeDataString(Model.Property.Address)&t=&z=13&ie=UTF8&iwloc=&output=embed" 
                            frameborder="0" 
                            scrolling="no" 
                            marginheight="0" 
                            marginwidth="0">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Similar Properties -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h4 class="mb-0">Similar Properties</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">Similar properties will be shown here</p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.IsUserLoggedIn)
{
    <!-- Schedule Viewing Modal -->
    <div class="modal fade" id="scheduleModal" tabindex="-1" aria-labelledby="scheduleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="scheduleModalLabel">Schedule a Viewing</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="scheduleForm">
                        <input type="hidden" id="propertyId" value="@Model.Property.Id">
                        
                        <div class="mb-3">
                            <label for="appointmentDate" class="form-label">Preferred Date</label>
                            <input type="date" class="form-control" id="appointmentDate" required min="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                        
                        <div class="mb-3">
                            <label for="appointmentTime" class="form-label">Preferred Time</label>
                            <input type="time" class="form-control" id="appointmentTime" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="appointmentNotes" class="form-label">Additional Notes</label>
                            <textarea class="form-control" id="appointmentNotes" rows="3" placeholder="Any special requests or questions..."></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="submitAppointment">Schedule Viewing</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Send Inquiry Modal -->
    <div class="modal fade" id="inquiryModal" tabindex="-1" aria-labelledby="inquiryModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="inquiryModalLabel">Send Inquiry</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="inquiryForm">
                        <input type="hidden" id="inquiryPropertyId" value="@Model.Property.Id">
                        
                        <div class="mb-3">
                            <label for="inquirySubject" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="inquirySubject" required placeholder="Question about @Model.Property.Title">
                        </div>
                        
                        <div class="mb-3">
                            <label for="inquiryMessage" class="form-label">Message</label>
                            <textarea class="form-control" id="inquiryMessage" rows="5" required placeholder="Your questions about this property..."></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="submitInquiry">Send Inquiry</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Make Offer Modal -->
    <div class="modal fade" id="offerModal" tabindex="-1" aria-labelledby="offerModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="offerModalLabel">Make an Offer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="offerForm">
                        <input type="hidden" id="offerPropertyId" value="@Model.Property.Id">
                        
                        <div class="mb-3">
                            <label for="offerAmount" class="form-label">Offer Amount ($)</label>
                            <input type="number" class="form-control" id="offerAmount" required min="1" value="@Model.Property.Price">
                            <div class="form-text">Listed price: $@Model.Property.Price.ToString("N0")</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="offerMessage" class="form-label">Message (Optional)</label>
                            <textarea class="form-control" id="offerMessage" rows="3" placeholder="Any conditions or notes about your offer..."></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="submitOffer">Submit Offer</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            @if (Model.IsUserLoggedIn)
            {
                <text>
                // Handle appointment submission
                $("#submitAppointment").click(function() {
                    if (!$("#scheduleForm")[0].checkValidity()) {
                        $("#scheduleForm")[0].reportValidity();
                        return;
                    }
                    
                    // Here you would add the AJAX call to submit the appointment
                    alert("Appointment request submitted! We'll contact you to confirm.");
                    $("#scheduleModal").modal("hide");
                });
                
                // Handle inquiry submission
                $("#submitInquiry").click(function() {
                    if (!$("#inquiryForm")[0].checkValidity()) {
                        $("#inquiryForm")[0].reportValidity();
                        return;
                    }
                    
                    // Here you would add the AJAX call to submit the inquiry
                    alert("Inquiry sent! The agent will respond to you soon.");
                    $("#inquiryModal").modal("hide");
                });
                
                // Handle offer submission
                $("#submitOffer").click(function() {
                    if (!$("#offerForm")[0].checkValidity()) {
                        $("#offerForm")[0].reportValidity();
                        return;
                    }
                    
                    // Here you would add the AJAX call to submit the offer
                    alert("Offer submitted! The agent will review your offer and get back to you.");
                    $("#offerModal").modal("hide");
                });
                
                // Handle add to favorites
                $("#addToFavorites").click(function() {
                    // Here you would add the AJAX call to add to favorites
                    $(this).html('<i class="bi bi-heart-fill me-2"></i>Added to Favorites');
                    $(this).prop('disabled', true);
                });
                </text>
            }
        });
    </script>
} 