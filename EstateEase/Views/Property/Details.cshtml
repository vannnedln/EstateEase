@model EstateEase.Models.ViewModels.PropertyDetailsViewModel

@{
    ViewData["Title"] = Model.Property.Title;
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">
    <style>
        :root {
            --secondary-gradient: linear-gradient(135deg, #11998e, #38ef7d);
        }
        
        .property-image-main {
            height: 400px;
            object-fit: cover;
            border-radius: 1rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: var(--transition);
        }
        
        .image-thumbnail {
            height: 70px;
            object-fit: cover;
            cursor: pointer;
            border-radius: 0.5rem;
            border: 2px solid transparent;
            transition: var(--transition);
        }
        
        .image-thumbnail:hover {
            transform: translateY(-3px);
            border-color: var(--primary-color);
        }
        
        .detail-section-title {
            font-weight: 700;
            margin-bottom: 1.5rem;
            position: relative;
            padding-bottom: 0.5rem;
            color: #333;
        }
        
        .detail-section-title:after {
            content: '';
            position: absolute;
            width: 50px;
            height: 3px;
            background: var(--primary-gradient);
            bottom: 0;
            left: 0;
            border-radius: 2px;
        }
        
        .property-feature-icon {
            background: var(--primary-gradient);
            color: white;
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-bottom: 0.5rem;
            font-size: 1.25rem;
        }
        
        .property-info-card {
            border: none;
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: var(--transition);
            height: 100%;
            background: white;
        }
        
        .property-info-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        }
        
        .amenity-item {
            transition: var(--transition);
        }
        
        .amenity-item:hover {
            transform: translateY(-3px);
        }
        
        .detail-item {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }
        
        .detail-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            color: var(--primary-color);
            font-size: 1.2rem;
        }
        
        .detail-label {
            font-weight: 500;
            margin-bottom: 0.25rem;
            color: #666;
        }
        
        .detail-value {
            font-weight: 600;
            color: #333;
        }
        
        .verified-badge {
            background: linear-gradient(135deg, #4e54c8, #8f94fb);
            color: white;
            padding: 0.3rem 0.75rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }
        
        .verified-badge i {
            margin-right: 0.25rem;
        }
        
        .property-section {
            background: white;
            border-radius: 1rem;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            position: relative;
            z-index: 1;
        }
        
        .room-feature {
            text-align: center;
        }
        
        .action-button {
            padding: 1rem 2rem;
            font-weight: 600;
            border-radius: 0.5rem;
        }
        
        /* Gradient Button Styles */
        .btn-gradient {
            background: var(--primary-gradient);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        
        .btn-gradient:hover {
            opacity: 0.9;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(78, 84, 200, 0.3);
            color: white;
        }
        
        .btn-gradient-alt {
            background: var(--secondary-gradient);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        
        .btn-gradient-alt:hover {
            opacity: 0.9;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(17, 153, 142, 0.3);
            color: white;
        }
        
        /* Fix for z-index and layout issues */
        .top-section {
            margin-bottom: 3rem; /* Reduced from 6rem to 3rem to move content higher */
        }
        
        .sidebar-card {
            position: relative;
            z-index: 10; /* Higher z-index to ensure it's above the property details */
        }
        
        .details-container {
            position: relative;
            z-index: 1;
            clear: both; /* Ensure it starts on a new line */
        }
    </style>
}

<div class="container mt-5">
    <nav aria-label="breadcrumb" class="fade-in" style="animation-delay: 0.1s;">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Properties">Properties</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Property.Title</li>
        </ol>
    </nav>

    @if (Model.Property.Status == "Sold" || Model.Property.Status == "Rented")
    {
        <div class="alert alert-warning fade-in mb-4" style="animation-delay: 0.2s;">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">This property is currently @Model.Property.Status.ToLower()</h5>
                    <p class="mb-0">
                        @if (Model.Property.Status == "Sold")
                        {
                            <span>This property has been sold and is no longer available for purchase.</span>
                        }
                        else if (Model.Property.Status == "Rented")
                        {
                            <span>This property has been rented and is currently occupied.</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    }

    <div class="row g-4 top-section">
        <!-- Property Images Gallery -->
        <div class="col-lg-8 mb-4 fade-in" style="animation-delay: 0.2s;">
            @if (Model.Property.PropertyImages != null && Model.Property.PropertyImages.Any())
            {
                <div id="propertyCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            bool isFirst = true;
                            foreach (var image in Model.Property.PropertyImages)
                            {
                                <div class="carousel-item @(isFirst ? "active" : "")">
                                    <img src="@image.ImagePath" class="d-block w-100 property-image-main" alt="Property Image">
                                </div>
                                isFirst = false;
                            }
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

                <div class="row mt-3">
                    @{
                        int count = 0;
                        foreach (var image in Model.Property.PropertyImages)
                        {
                            if (count < 5) // Show only 5 thumbnail images
                            {
                                <div class="col">
                                    <img src="@image.ImagePath" class="img-thumbnail image-thumbnail" alt="Property Image" 
                                         onclick="$('#propertyCarousel').carousel(@count)">
                                </div>
                            }
                            count++;
                        }
                    }
                </div>
            }
            else
            {
                <div class="bg-light rounded-4 d-flex align-items-center justify-content-center" style="height: 400px;">
                    <p class="text-muted">No images available</p>
                </div>
            }
        </div>

        <!-- Property Quick Info -->
        <div class="col-lg-4 fade-in" style="animation-delay: 0.3s;">
            <div class="property-info-card sidebar-card">
                <div class="card-body p-4">
                    @if (Model.Property.Agent == null)
                    {
                        <div class="verified-badge mb-3">
                            <i class="bi bi-patch-check-fill"></i> Verified Property
                        </div>
                    }
                    <h2 class="card-title fw-bold mb-2">@Model.Property.Title</h2>
                    <p class="text-muted mb-3"><i class="bi bi-geo-alt me-2"></i>@Model.Property.Address</p>
                    
                    <div class="d-flex flex-wrap align-items-center gap-2 mb-4">
                        <span class="badge bg-primary py-2 px-3 mb-1">@Model.Property.PropertyType</span>
                        <span class="badge bg-success py-2 px-3 mb-1">@Model.Property.Status</span>
                        <span class="badge bg-info py-2 px-3 mb-1">For @Model.Property.SellingType</span>
                    </div>
                    
                    <h3 class="gradient-text fw-bold mb-5 fs-2">₱@Model.Property.Price.ToString("N0")@(Model.Property.SellingType == "Rent" ? "/mo" : "")</h3>
                    
                    @if (Model.IsUserLoggedIn)
                    {
                        <div class="d-grid gap-4 mt-5">
                            <button class="btn btn-gradient action-button" data-bs-toggle="modal" data-bs-target="#inquiryModal">
                                <i class="bi bi-chat-left-text me-2"></i>Send Inquiry
                            </button>
                            @if (Model.Property.Status == "Sold" || Model.Property.Status == "Rented")
                            {
                                <button class="btn btn-secondary action-button" disabled>
                                    <i class="bi @(Model.Property.Status == "Rented" ? "bi-house-check" : "bi-bag-check") me-2"></i>
                                    @Model.Property.Status
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-gradient action-button" data-bs-toggle="modal" data-bs-target="#actionModal">
                                    <i class="bi @(Model.Property.SellingType == "Rent" ? "bi-house-check" : "bi-bag-check") me-2"></i>
                                    @(Model.Property.SellingType == "Rent" ? "Rent Now" : "Buy Now")
                                </button>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-3 rounded-4 border-0 shadow-sm mt-4">
                            <i class="bi bi-info-circle me-2"></i>
                            <a asp-area="Identity" asp-page="/Account/Login" class="alert-link">Sign in</a> to contact the agent and buy the property.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Content Layout Section -->
    <div class="row mt-2">
        <!-- Left Column - Property Details -->
        <div class="col-lg-8">
            <!-- Property Details -->
            <div class="property-section mb-4 fade-in" style="animation-delay: 0.6s;">
                <h3 class="detail-section-title">Property Details</h3>
                <div class="row g-4">
                    <div class="col-md-3 col-sm-6">
                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-house"></i>
                            </div>
                            <div>
                                <div class="detail-label">Type</div>
                                <div class="detail-value">@Model.Property.PropertyType</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-rulers"></i>
                            </div>
                            <div>
                                <div class="detail-label">Size</div>
                                <div class="detail-value">@Model.Property.Size m²</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-building"></i>
                            </div>
                            <div>
                                <div class="detail-label">Total Floors</div>
                                <div class="detail-value">@Model.Property.TotalFloors</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-tag"></i>
                                </div>
                            <div>
                                <div class="detail-label">Status</div>
                                <div class="detail-value">@Model.Property.Status</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-calendar"></i>
                            </div>
                            <div>
                                <div class="detail-label">Listed</div>
                                <div class="detail-value">@Model.Property.CreatedAt.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-cash"></i>
                            </div>
                            <div>
                                <div class="detail-label">Price</div>
                                <div class="detail-value">₱@Model.Property.Price.ToString("N0")@(Model.Property.SellingType == "Rent" ? "/mo" : "")</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-shop"></i>
                            </div>
                            <div>
                                <div class="detail-label">For</div>
                                <div class="detail-value">@Model.Property.SellingType</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Rooms & Spaces -->
            <div class="property-section mb-4 fade-in" style="animation-delay: 0.7s;">
                <h3 class="detail-section-title">Rooms & Spaces</h3>
                <div class="row g-4 text-center">
                        <div class="col col-md col-lg" style="min-width: 120px;">
                        <div class="property-info-card p-3">
                                <div class="property-feature-icon mx-auto">
                                    <i class="bi bi-door-closed"></i>
                            </div>
                            <div class="mt-2 fw-bold fs-4">@Model.Property.Bedrooms</div>
                            <div class="text-muted">Bedrooms</div>
                            </div>
                        </div>
                        <div class="col col-md col-lg" style="min-width: 120px;">
                        <div class="property-info-card p-3">
                                <div class="property-feature-icon mx-auto">
                                    <i class="bi bi-water"></i>
                            </div>
                            <div class="mt-2 fw-bold fs-4">@Model.Property.Bathrooms</div>
                            <div class="text-muted">Bathrooms</div>
                            </div>
                        </div>
                        <div class="col col-md col-lg" style="min-width: 120px;">
                        <div class="property-info-card p-3">
                                <div class="property-feature-icon mx-auto">
                                    <i class="bi bi-cup-hot"></i>
                            </div>
                            <div class="mt-2 fw-bold fs-4">@Model.Property.Kitchen</div>
                            <div class="text-muted">Kitchen</div>
                            </div>
                        </div>
                        <div class="col col-md col-lg" style="min-width: 120px;">
                        <div class="property-info-card p-3">
                                <div class="property-feature-icon mx-auto">
                                    <i class="bi bi-people"></i>
                            </div>
                            <div class="mt-2 fw-bold fs-4">@Model.Property.Hall</div>
                            <div class="text-muted">Hall</div>
                            </div>
                        </div>
                        <div class="col col-md col-lg" style="min-width: 120px;">
                        <div class="property-info-card p-3">
                                <div class="property-feature-icon mx-auto">
                                    <i class="bi bi-door-open"></i>
                            </div>
                            <div class="mt-2 fw-bold fs-4">@Model.Property.Balcony</div>
                            <div class="text-muted">Balcony</div>
                        </div>
                            </div>
                        </div>
                    </div>

            <!-- Amenities -->
            <div class="property-section mb-4 fade-in" style="animation-delay: 0.8s;">
                <h3 class="detail-section-title">Amenities</h3>
                <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-3 p-3 rounded-4 amenity-item @(Model.Property.HasSwimmingPool ? "bg-light" : "")">
                                    <i class="bi @(Model.Property.HasSwimmingPool ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger") me-3"></i>
                                    <span class="@(Model.Property.HasSwimmingPool ? "fw-medium" : "text-muted")">Swimming Pool</span>
                                </li>
                                <li class="mb-3 p-3 rounded-4 amenity-item @(Model.Property.HasParking ? "bg-light" : "")">
                                    <i class="bi @(Model.Property.HasParking ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger") me-3"></i>
                                    <span class="@(Model.Property.HasParking ? "fw-medium" : "text-muted")">Parking</span>
                                </li>
                                <li class="mb-3 p-3 rounded-4 amenity-item @(Model.Property.HasGym ? "bg-light" : "")">
                                    <i class="bi @(Model.Property.HasGym ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger") me-3"></i>
                                    <span class="@(Model.Property.HasGym ? "fw-medium" : "text-muted")">Gym</span>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-3 p-3 rounded-4 amenity-item @(Model.Property.HasSecurity ? "bg-light" : "")">
                                    <i class="bi @(Model.Property.HasSecurity ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger") me-3"></i>
                                    <span class="@(Model.Property.HasSecurity ? "fw-medium" : "text-muted")">Security</span>
                                </li>
                                <li class="mb-3 p-3 rounded-4 amenity-item @(Model.Property.HasElevator ? "bg-light" : "")">
                                    <i class="bi @(Model.Property.HasElevator ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger") me-3"></i>
                                    <span class="@(Model.Property.HasElevator ? "fw-medium" : "text-muted")">Elevator</span>
                                </li>
                                <li class="mb-3 p-3 rounded-4 amenity-item @(Model.Property.HasCCTV ? "bg-light" : "")">
                                    <i class="bi @(Model.Property.HasCCTV ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger") me-3"></i>
                                    <span class="@(Model.Property.HasCCTV ? "fw-medium" : "text-muted")">CCTV</span>
                                </li>
                            </ul>
                    </div>
                        </div>
                    </div>

            <!-- Description -->
            <div class="property-section mb-4 fade-in" style="animation-delay: 0.9s;">
                <h3 class="detail-section-title">Description</h3>
                <div class="p-3 rounded-4 bg-light">
                        @Html.Raw(Model.Property.Content)
                </div>
                    </div>

            <!-- Location -->
            <div class="property-section mb-4 fade-in" style="animation-delay: 1s;">
                <h3 class="detail-section-title">Location</h3>
                <div class="ratio ratio-16x9 rounded-4 overflow-hidden shadow-sm">
                        <iframe 
                            src="https://maps.google.com/maps?q=@Uri.EscapeDataString(Model.Property.Address)&t=&z=13&ie=UTF8&iwloc=&output=embed" 
                            frameborder="0" 
                            scrolling="no" 
                            marginheight="0" 
                            marginwidth="0">
                        </iframe>
                    </div>
                </div>
            </div>

        <!-- Right Column - Agent Info -->
        <div class="col-lg-4">
            <!-- Listed By Section -->
            <div class="property-section mb-4 fade-in" style="animation-delay: 0.6s;">
                <h3 class="detail-section-title">Listed by</h3>
                @if (Model.Property.Agent != null)
                {
                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(Model.Property.Agent.ProfilePictureUrl))
                        {
                            <img src="@Model.Property.Agent.ProfilePictureUrl" class="rounded-circle me-3" alt="Agent" width="70" height="70" style="object-fit: cover; border: 3px solid #f8f9fa;">
                        }
                        else
                        {
                            <div class="rounded-circle d-flex align-items-center justify-content-center me-3" 
                                 style="width: 70px; height: 70px; background: var(--primary-gradient);">
                                <i class="bi bi-person text-white" style="font-size: 1.8rem;"></i>
                            </div>
                        }
                        <div>
                            <h6 class="mb-2 fw-bold">@Model.Property.Agent.FirstName @Model.Property.Agent.LastName</h6>
                            @if (Model.Property.Agent.User != null)
                            {
                                @if (!string.IsNullOrEmpty(Model.Property.Agent.User.PhoneNumber))
                                {
                                    <p class="text-muted mb-1 small">
                                        <i class="bi bi-telephone me-2"></i>@Model.Property.Agent.User.PhoneNumber
                                    </p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Property.Agent.User.Email))
                                {
                                    <p class="text-muted mb-0 small">
                                        <i class="bi bi-envelope me-2"></i>@Model.Property.Agent.User.Email
                                    </p>
                                }
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3" 
                             style="width: 70px; height: 70px; background: var(--primary-gradient);">
                            <i class="bi bi-shield text-white" style="font-size: 1.8rem;"></i>
                        </div>
                        <div>
                            <h6 class="mb-2 fw-bold">EstateEase Official</h6>
                            <p class="text-muted mb-1 small">
                                <i class="bi bi-patch-check-fill me-2 text-primary"></i>Verified Property
                            </p>
                            <p class="text-muted mb-0 small">
                                <i class="bi bi-envelope me-2"></i>sales@estateease.com
                            </p>
                        </div>
                    </div>
                }
            </div>

            <!-- Similar Properties -->
            <div class="property-section mb-4 fade-in" style="animation-delay: 0.7s;">
                <h3 class="detail-section-title">Similar Properties</h3>
                
                @if (Model.SimilarProperties != null && Model.SimilarProperties.Any())
                {
                    <div class="similar-properties">
                        @foreach (var property in Model.SimilarProperties.Take(3))
                        {
                            <div class="similar-property-item mb-4">
                                <div class="row g-3">
                                    <div class="col-4">
                                        <a asp-controller="Property" asp-action="Details" asp-route-id="@property.Id">
                                            @if (property.PropertyImages != null && property.PropertyImages.Any())
                                            {
                                                <img src="@property.PropertyImages.First().ImagePath" class="img-fluid rounded-3" alt="@property.Title">
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded-3 d-flex align-items-center justify-content-center" style="height: 80px;">
                                                    <i class="bi bi-house text-muted"></i>
                                                </div>
                                            }
                                        </a>
                                    </div>
                                    <div class="col-8">
                                        <h6 class="mb-1">
                                            <a asp-controller="Property" asp-action="Details" asp-route-id="@property.Id" class="text-decoration-none text-dark stretched-link">
                                                @property.Title
                                            </a>
                                        </h6>
                                        <div class="text-primary mb-1 fw-bold">₱@property.Price.ToString("N0")@(property.SellingType == "Rent" ? "/mo" : "")</div>
                                        <div class="d-flex gap-2 mt-2">
