@model IEnumerable<EstateEase.Models.Entities.Agent>

@{
    ViewData["Title"] = "Our Agents";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">
    <style>
        .about-agents-section {
            background: #f8fafc;
            border-radius: 1.5rem;
            margin-top: 3rem;
        }
        .about-agent-highlight {
            font-size: 1.1rem;
            font-weight: 500;
            background: #fff;
            border-radius: 2rem;
            padding: 0.75rem 1.5rem;
            box-shadow: 0 2px 8px rgba(41,55,240,0.06);
            display: flex;
            align-items: center;
        }
        @@media (max-width: 767px) {
            .about-agent-highlight {
                font-size: 1rem;
                padding: 0.5rem 1rem;
            }
        }
    </style>
}

<section class="property-section" style="padding-top: 5rem; padding-bottom: 5rem;">
    <div class="container">
        <div class="section-header mb-4">
            <h2 class="section-title fade-in">Meet Our Agents</h2>
        </div>
        <div class="row g-4">
            @foreach (var agent in Model)
            {
                <div class="col-md-6 col-lg-4 fade-in">
                    <div class="card h-100 shadow-sm agent-card text-center">
                        <div class="card-body d-flex flex-column align-items-center justify-content-center">
                            <img src="@(string.IsNullOrEmpty(agent.ProfilePictureUrl) ? "/images/default-agent.png" : agent.ProfilePictureUrl)" class="rounded-circle mb-3" alt="Agent Photo" style="width: 100px; height: 100px; object-fit: cover; border: 4px solid var(--primary-color);">
                            <h5 class="card-title mb-1 fw-semibold">@agent.FullName</h5>
                       
                            @if (!string.IsNullOrEmpty(agent.Bio))
                            {
                                <p class="card-text small">@agent.Bio</p>
                            }
                        </div>
                    </div>
                </div>
            }
            @if (!Model.Any())
            {
                <div class="col-12 text-center">
                    <div class="alert alert-info">No agents found.</div>
                </div>
            }
        </div>
    </div>
</section>

<section class="about-agents-section py-5">
    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8 text-center">
                <h3 class="fw-bold mb-3">Why Choose EstateEase Agents?</h3>
                <p class="lead text-muted">
                    Our agents are dedicated professionals committed to helping you find the perfect property. With years of experience and deep local knowledge, they provide personalized service and expert guidance every step of the way.
                </p>
            </div>
        </div>
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <ul class="list-unstyled d-flex flex-wrap justify-content-center gap-4">
                    <li class="about-agent-highlight">
                        <i class="bi bi-patch-check-fill text-primary me-2"></i>
                        Licensed & Accredited
                    </li>
                    <li class="about-agent-highlight">
                        <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                        Local Market Experts
                    </li>
                    <li class="about-agent-highlight">
                        <i class="bi bi-people-fill text-primary me-2"></i>
                        Personalized Service
                    </li>
                    <li class="about-agent-highlight">
                        <i class="bi bi-star-fill text-primary me-2"></i>
                        Trusted by Hundreds of Clients
                    </li>
                </ul>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto">
                <a href="/Contact" class="btn btn-gradient px-4 py-2">Contact an Agent</a>
            </div>
        </div>
    </div>
</section> 