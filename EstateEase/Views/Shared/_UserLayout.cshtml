<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Account | EstateEase</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <!-- Main CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Custom dashboard CSS -->
    <style>
        :root {
            --primary: #4f5aff;
            --primary-hover: #3a44d9;
            --primary-light: #e8eaff;
            --secondary: #9f1ae2;
            --text-dark: #111827;
            --text-medium: #4b5563;
            --text-light: #9ca3af;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
        }
        
        body {
            background-color: #f9fafb;
            color: var(--text-dark);
        }
        
        .user-dashboard-nav {
            min-height: 60px;
            background: #fff;
            box-shadow: 0 1px 2px 0 rgba(0,0,0,0.05);
        }
        
        .user-sidebar {
            background: #fff;
            border-right: 1px solid var(--gray-200);
            min-height: calc(100vh - 60px);
            width: 280px;
        }
        
        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1.25rem;
            color: var(--text-medium);
            border-left: 3px solid transparent;
            text-decoration: none;
            transition: all 0.2s ease;
        }
        
        .sidebar-link:hover {
            background-color: var(--primary-light);
            color: var(--primary);
        }
        
        .sidebar-link.active {
            background-color: var(--primary-light);
            color: var(--primary);
            border-left-color: var(--primary);
            font-weight: 500;
        }
        
        .sidebar-link i {
            margin-right: 12px;
            font-size: 1.1rem;
        }
        
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: var(--primary-light);
            color: var(--primary);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 500;
        }
        
        .dashboard-card {
            background: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 1px 3px 0 rgba(0,0,0,0.1), 0 1px 2px 0 rgba(0,0,0,0.06);
            transition: all 0.2s ease;
        }
        
        .dashboard-card:hover {
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -1px rgba(0,0,0,0.06);
        }
        
        .dashboard-stat {
            background: linear-gradient(45deg, var(--primary), var(--secondary));
            color: white;
            border-radius: 0.5rem;
            padding: 1.5rem;
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -1px rgba(0,0,0,0.06);
        }
        
        .dropdown-menu {
            min-width: 15rem;
            padding: 0.5rem 0;
            border: none;
            box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05);
            border-radius: 0.5rem;
        }
        
        .dropdown-item {
            padding: 0.5rem 1.5rem;
        }
        
        .dropdown-divider {
            margin: 0.5rem 0;
        }
        
        .badge-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
        }
        
        .badge-dot.bg-success {
            background-color: var(--success);
        }
        
        .badge-dot.bg-warning {
            background-color: var(--warning);
        }
        
        .badge-dot.bg-danger {
            background-color: var(--danger);
        }
        
        .property-thumbnail {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 0.5rem 0.5rem 0 0;
        }
        
        .appointment-status {
            padding: 0.25rem 0.75rem;
            border-radius: 2rem;
            font-size: 0.75rem;
            font-weight: 500;
        }
        
        .appointment-status.confirmed {
            background-color: rgba(16, 185, 129, 0.1);
            color: var(--success);
        }
        
        .appointment-status.pending {
            background-color: rgba(245, 158, 11, 0.1);
            color: var(--warning);
        }
        
        .appointment-status.cancelled {
            background-color: rgba(239, 68, 68, 0.1);
            color: var(--danger);
        }
    </style>
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @using Microsoft.AspNetCore.Identity
    @inject SignInManager<IdentityUser> SignInManager
    @inject UserManager<IdentityUser> UserManager
    
    @{
        var user = await UserManager.GetUserAsync(User);
        var userName = "User";
        var userEmail = user?.Email ?? "user@example.com";
        var initials = "U";
        
        if (user != null)
        {
            var claims = await UserManager.GetClaimsAsync(user);
            var firstName = claims.FirstOrDefault(c => c.Type == "FirstName")?.Value;
            var lastName = claims.FirstOrDefault(c => c.Type == "LastName")?.Value;
            
            if (!string.IsNullOrEmpty(firstName) && !string.IsNullOrEmpty(lastName))
            {
                userName = $"{firstName} {lastName}";
                initials = firstName[0].ToString() + lastName[0].ToString();
            }
            else if (!string.IsNullOrEmpty(firstName))
            {
                userName = firstName;
                initials = firstName[0].ToString();
            }
            else if (!string.IsNullOrEmpty(user.Email))
            {
                userName = user.Email.Split('@')[0];
                initials = user.Email[0].ToString().ToUpper();
            }
        }
    }

    <!-- Top Navigation Bar -->
    <nav class="user-dashboard-nav sticky-top">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center h-100 py-2">
                <div class="d-flex align-items-center">
                    <a class="navbar-brand d-flex align-items-center me-4" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/estate-ease_IT15_LOGO.png" alt="EstateEase Logo" height="40" class="me-2">
                        <span class="fs-5 fw-semibold">EstateEase</span>
                    </a>
                    <button class="btn btn-sm d-lg-none" id="sidebarToggle">
                        <i class="bi bi-list fs-5"></i>
                    </button>
                </div>
                
                <div class="d-flex align-items-center">
                    <div class="dropdown me-3">
                        <button class="btn position-relative" type="button" id="notificationsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-bell fs-5"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                3
                                <span class="visually-hidden">notifications</span>
                            </span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationsDropdown">
                            <li><h6 class="dropdown-header">Notifications</h6></li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center py-2" href="#">
                                    <div class="me-3">
                                        <div class="bg-primary rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                                            <i class="bi bi-calendar-check text-white"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <p class="mb-0 fw-medium">Your appointment has been confirmed</p>
                                        <p class="text-muted small mb-0">2 hours ago</p>
                                    </div>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center py-2" href="#">
                                    <div class="me-3">
                                        <div class="bg-success rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                                            <i class="bi bi-house-check text-white"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <p class="mb-0 fw-medium">Your offer was accepted!</p>
                                        <p class="text-muted small mb-0">Yesterday</p>
                                    </div>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center py-2" href="#">
                                    <div class="me-3">
                                        <div class="bg-info rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                                            <i class="bi bi-chat-left-text text-white"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <p class="mb-0 fw-medium">New message from agent</p>
                                        <p class="text-muted small mb-0">2 days ago</p>
                                    </div>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-center text-primary" href="#">View all notifications</a></li>
                        </ul>
                    </div>
                    
                    <div class="dropdown">
                        <button class="btn d-flex align-items-center gap-2" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="user-avatar">
                                @initials
                            </div>
                            <span class="d-none d-md-inline">@userName</span>
                            <i class="bi bi-chevron-down small"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li class="px-3 py-2 d-flex flex-column">
                                <span class="fw-semibold">@userName</span>
                                <span class="text-muted small">@userEmail</span>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-area="User" asp-controller="Profile" asp-action="Index"><i class="bi bi-person me-2"></i> Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i> Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i> Sign out</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="d-flex flex-grow-1">
        <!-- Sidebar -->
        <div class="user-sidebar d-none d-lg-block">
            <div class="p-4">
                <h5 class="mb-4 fw-semibold">My Account</h5>
                <div class="d-flex flex-column gap-1">
                    <a asp-area="User" asp-controller="Dashboard" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <i class="bi bi-grid"></i> Dashboard
                    </a>
                    <a asp-area="User" asp-controller="Properties" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Properties" ? "active" : "")">
                        <i class="bi bi-houses"></i> My Properties
                    </a>
                    <a asp-area="User" asp-controller="Appointments" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Appointments" ? "active" : "")">
                        <i class="bi bi-calendar3"></i> Appointments
                    </a>
                    <a asp-area="User" asp-controller="Messages" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Messages" ? "active" : "")">
                        <i class="bi bi-chat-left-text"></i> Messages
                    </a>
                    <a asp-area="User" asp-controller="Payments" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Payments" ? "active" : "")">
                        <i class="bi bi-credit-card"></i> Payments
                    </a>
                    <a asp-area="User" asp-controller="Profile" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Profile" ? "active" : "")">
                        <i class="bi bi-person"></i> Profile
                    </a>
                </div>
            </div>
        </div>

        <!-- Mobile Sidebar -->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar" aria-labelledby="mobileSidebarLabel">
            <div class="offcanvas-header border-bottom">
                <h5 class="offcanvas-title" id="mobileSidebarLabel">My Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body p-0">
                <div class="d-flex flex-column gap-1 p-3">
                    <a asp-area="User" asp-controller="Dashboard" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <i class="bi bi-grid"></i> Dashboard
                    </a>
                    <a asp-area="User" asp-controller="Properties" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Properties" ? "active" : "")">
                        <i class="bi bi-houses"></i> My Properties
                    </a>
                    <a asp-area="User" asp-controller="Appointments" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Appointments" ? "active" : "")">
                        <i class="bi bi-calendar3"></i> Appointments
                    </a>
                    <a asp-area="User" asp-controller="Messages" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Messages" ? "active" : "")">
                        <i class="bi bi-chat-left-text"></i> Messages
                    </a>
                    <a asp-area="User" asp-controller="Payments" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Payments" ? "active" : "")">
                        <i class="bi bi-credit-card"></i> Payments
                    </a>
                    <a asp-area="User" asp-controller="Profile" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Profile" ? "active" : "")">
                        <i class="bi bi-person"></i> Profile
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS bundle -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile sidebar toggle
            document.getElementById('sidebarToggle')?.addEventListener('click', function() {
                const sidebarMenu = new bootstrap.Offcanvas(document.getElementById('mobileSidebar'));
                sidebarMenu.show();
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 