@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 fade-in" style="animation-delay: 0.1s;">
                <h1 class="hero-title">Find Your Dream <span style="background: var(--primary-gradient); -webkit-background-clip: text; background-clip: text; color: transparent;">Home</span> Today</h1>
                <p class="hero-text">Discover the perfect property that matches your lifestyle and needs with EstateEase, your trusted real estate partner</p>
                <a href="#properties" class="btn btn-primary px-4 py-3">Explore Properties</a>

                <div class="search-box mt-5">
                    <h5 class="search-box-title">Search Properties</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <select class="form-select">
                                <option selected>Property Type</option>
                                <option>House</option>
                                <option>Apartment</option>
                                <option>Villa</option>
                                <option>Land</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <select class="form-select">
                                <option selected>Location</option>
                                <option>Manila</option>
                                <option>Quezon City</option>
                                <option>Makati</option>
                                <option>Taguig</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <select class="form-select">
                                <option selected>Price Range</option>
                                <option>₱1M - ₱5M</option>
                                <option>₱5M - ₱10M</option>
                                <option>₱10M - ₱20M</option>
                                <option>₱20M+</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-search w-100">
                                <i class="bi bi-search me-2"></i> Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 fade-in" style="animation-delay: 0.3s;">
                <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c" alt="Modern House" class="hero-image">
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3 fade-in" style="animation-delay: 0.2s;">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-house-check"></i>
                    </div>
                    <h3 class="stat-number">1,500+</h3>
                    <p class="stat-text">Properties Available</p>
                </div>
            </div>
            <div class="col-md-3 fade-in" style="animation-delay: 0.4s;">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <h3 class="stat-number">850+</h3>
                    <p class="stat-text">Happy Customers</p>
                </div>
            </div>
            <div class="col-md-3 fade-in" style="animation-delay: 0.6s;">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-building"></i>
                    </div>
                    <h3 class="stat-number">200+</h3>
                    <p class="stat-text">Cities Covered</p>
                </div>
            </div>
            <div class="col-md-3 fade-in" style="animation-delay: 0.8s;">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-award"></i>
                    </div>
                    <h3 class="stat-number">15+</h3>
                    <p class="stat-text">Years Experience</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Popular Properties Section -->
<section id="properties" class="property-section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title fade-in">Featured Properties</h2>
            <a asp-area="" asp-controller="Home" asp-action="Properties" class="see-all-link fade-in">See All Properties <i class="bi bi-arrow-right"></i></a>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4 fade-in" style="animation-delay: 0.2s;">
                <div class="property-card">
                    <div class="position-relative">
                        <img src="https://images.unsplash.com/photo-1600596542815-ffad4c1539a9" alt="Property" class="property-image">
                        <span class="property-badge">For Sale</span>
                    </div>
                    <div class="property-details">
                        <h3 class="property-title">Luxury Villa with Pool</h3>
                        <div class="property-location">
                            <i class="bi bi-geo-alt"></i>
                            <span>Makati City, Metro Manila</span>
                        </div>
                        <h4 class="property-price">₱25,000,000</h4>
                        <div class="property-features">
                            <div class="feature-item">
                                <i class="bi bi-door-open"></i>
                                <span>4 Beds</span>
                            </div>
                            <div class="feature-item">
                                <i class="bi bi-droplet"></i>
                                <span>3 Baths</span>
                            </div>
                            <div class="feature-item">
                                <i class="bi bi-rulers"></i>
                                <span>450 sq.m</span>
                            </div>
                        </div>
                        <div class="property-actions">
                            <a href="#" class="btn-view">View Details</a>
                            <button class="btn-favorite">
                                <i class="bi bi-heart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 mb-4 fade-in" style="animation-delay: 0.4s;">
                <div class="property-card">
                    <div class="position-relative">
                        <img src="https://images.unsplash.com/photo-1600607687939-ce8a6c25118c" alt="Property" class="property-image">
                        <span class="property-badge">For Rent</span>
                    </div>
                    <div class="property-details">
                        <h3 class="property-title">Modern City Apartment</h3>
                        <div class="property-location">
                            <i class="bi bi-geo-alt"></i>
                            <span>BGC, Taguig City</span>
                        </div>
                        <h4 class="property-price">₱45,000/mo</h4>
                        <div class="property-features">
                            <div class="feature-item">
                                <i class="bi bi-door-open"></i>
                                <span>2 Beds</span>
                            </div>
                            <div class="feature-item">
                                <i class="bi bi-droplet"></i>
                                <span>2 Baths</span>
                            </div>
                            <div class="feature-item">
                                <i class="bi bi-rulers"></i>
                                <span>80 sq.m</span>
                            </div>
                        </div>
                        <div class="property-actions">
                            <a href="#" class="btn-view">View Details</a>
                            <button class="btn-favorite">
                                <i class="bi bi-heart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 mb-4 fade-in" style="animation-delay: 0.6s;">
                <div class="property-card">
                    <div class="position-relative">
                        <img src="https://images.unsplash.com/photo-1584738766473-61c083514bf4" alt="Property" class="property-image">
                        <span class="property-badge">For Sale</span>
                    </div>
                    <div class="property-details">
                        <h3 class="property-title">Beachfront Property</h3>
                        <div class="property-location">
                            <i class="bi bi-geo-alt"></i>
                            <span>Batangas City</span>
                        </div>
                        <h4 class="property-price">₱18,500,000</h4>
                        <div class="property-features">
                            <div class="feature-item">
                                <i class="bi bi-door-open"></i>
                                <span>3 Beds</span>
                            </div>
                            <div class="feature-item">
                                <i class="bi bi-droplet"></i>
                                <span>2 Baths</span>
                            </div>
                            <div class="feature-item">
                                <i class="bi bi-rulers"></i>
                                <span>320 sq.m</span>
                            </div>
                        </div>
                        <div class="property-actions">
                            <a href="#" class="btn-view">View Details</a>
                            <button class="btn-favorite">
                                <i class="bi bi-heart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 fade-in">
                <h2 class="cta-title">Ready to Find Your Dream Home?</h2>
                <p class="cta-text">Join thousands of satisfied customers who have found their perfect property with EstateEase.</p>
            </div>
            <div class="col-lg-4 text-lg-end fade-in">
                <a href="@Url.Action("Contact", "Home")" class="btn-cta">Get Started Today</a>
            </div>
        </div>
    </div>
</section>

<!-- Footer -->
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 footer-col">
                <div class="footer-logo">
                    <img src="~/images/estate-ease_IT15_LOGO.png" alt="EstateEase Logo" class="me-2" style="width: 36px; height: 36px;">
                    <span>EstateEase</span>
                </div>
                <p class="footer-text">Your trusted partner in finding the perfect home. We make real estate transactions simple, transparent, and stress-free.</p>
                <div class="social-icons">
                    <a href="#" class="social-icon"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="social-icon"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="social-icon"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="social-icon"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 footer-col">
                <h4 class="footer-title">Quick Links</h4>
                <ul class="footer-links">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Properties">Properties</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About Us</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-4 footer-col">
                <h4 class="footer-title">Property Types</h4>
                <ul class="footer-links">
                    <li><a asp-area="" asp-controller="Home" asp-action="Properties">Apartments</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Properties">Houses</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Properties">Villas</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Properties">Commercial</a></li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-4 footer-col">
                <h4 class="footer-title">Contact Us</h4>
                <ul class="footer-links">
                    <li><i class="bi bi-geo-alt me-2"></i> 123 Real Estate Street, Davao City</li>
                    <li><i class="bi bi-telephone me-2"></i> (02) 8123-4567</li>
                    <li><a href="mailto:info@estateease.com"><i class="bi bi-envelope me-2"></i> info@estateease.com</a></li>
                </ul>
            </div>
        </div>
        <div class="copyright">
            <p>&copy; 2023 EstateEase. All rights reserved.</p>
        </div>
    </div>
</footer>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add 'show' class to all fade-in elements with a staggered delay
            const fadeElements = document.querySelectorAll('.fade-in');
            fadeElements.forEach((el, index) => {
                setTimeout(() => {
                    el.style.opacity = '1';
                }, 100 + (index * 100));
            });
        });
    </script>
}
