<!-- Contact Form Section -->
<section class="property-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-4 mb-lg-0 fade-in" style="animation-delay: 0.2s;">
                <h2 class="section-title mb-4">Send us a Message</h2>
                <p class="mb-4 text-muted">Fill out the form below, and our team will get back to you as soon as possible. We value your inquiries and look forward to serving you.</p>
                
                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="firstName" placeholder="First Name">
                                <label for="firstName">First Name</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="lastName" placeholder="Last Name">
                                <label for="lastName">Last Name</label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="email" placeholder="Email address">
                        <label for="email">Email address</label>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input type="tel" class="form-control" id="phone" placeholder="Phone Number">
                        <label for="phone">Phone Number</label>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <select class="form-select" id="inquiryType">
                            <option selected disabled value="">Select an option</option>
                            <option>Property Search</option>
                            <option>Property Selling</option>
                            <option>Property Valuation</option>
                            <option>Investment Consultation</option>
                            <option>Other</option>
                        </select>
                        <label for="inquiryType">Inquiry Type</label>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="message" style="height: 150px" placeholder="Your message"></textarea>
                        <label for="message">Your message</label>
                    </div>
                    
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="termsCheck">
                        <label class="form-check-label text-muted" for="termsCheck">
                            I agree to the <a href="#" class="text-primary">privacy policy</a> and <a href="#" class="text-primary">terms of service</a>.
                        </label>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-lg px-4 py-2">
                        <i class="bi bi-send me-2"></i> Send Message
                    </button>
                </form>
            </div>
            
            <div class="col-lg-6 fade-in" style="animation-delay: 0.4s;">
                <div class="position-relative h-100">
                    <!-- Map container with placeholder -->
                    <div class="rounded-4 shadow-sm overflow-hidden h-100" style="min-height: 500px;">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d254888.2889153189!2d125.4263918346602!3d7.197988930290685!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x32f96d9f519e327f%3A0xfb26307fa868c3e1!2sDavao%20City%2C%20Davao%20del%20Sur!5e0!3m2!1sen!2sph!4v1697034567890!5m2!1sen!2sph" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                
                    <!-- Floating card on the map -->
                    <div class="position-absolute start-0 bottom-0 m-4 p-4 bg-white rounded-4 shadow" style="max-width: 280px;">
                        <h4 class="mb-3" style="font-weight: 600; font-size: 1.2rem;">Visit Our Office</h4>
                        <p class="text-muted mb-2"><i class="bi bi-clock me-2"></i> Mon-Fri: 8AM - 6PM</p>
                        <p class="text-muted mb-2"><i class="bi bi-clock me-2"></i> Sat: 9AM - 1PM</p>
                        <p class="text-muted mb-0"><i class="bi bi-clock me-2"></i> Sun: Closed</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="property-section bg-white">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title fade-in">Frequently Asked Questions</h2>
        </div>
        
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="accordion fade-in" id="contactFAQ">
                    <div class="accordion-item border-0 mb-3 shadow-sm rounded">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                How quickly can I expect a response to my inquiry?
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#contactFAQ">
                            <div class="accordion-body">
                                We typically respond to all inquiries within 24 hours during business days. For urgent matters, we recommend calling our office directly for immediate assistance.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item border-0 mb-3 shadow-sm rounded">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Can I schedule a property viewing through the contact form?
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#contactFAQ">
                            <div class="accordion-body">
                                Yes, you can request a property viewing through our contact form. Please mention the property you're interested in and your preferred date and time in the message field. Our team will confirm the viewing appointment based on availability.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item border-0 mb-3 shadow-sm rounded">
                        <h2 class="accordion-header" id="headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                How can I join the EstateEase team as an agent?
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#contactFAQ">
                            <div class="accordion-body">
                                We're always looking for talented real estate professionals to join our team. Please use the contact form and select "Other" as the inquiry type, then specify your interest in joining as an agent in the message. Our HR team will reach out with more information about the application process.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item border-0 mb-3 shadow-sm rounded">
                        <h2 class="accordion-header" id="headingFour">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                Do you offer virtual property tours?
                            </button>
                        </h2>
                        <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#contactFAQ">
                            <div class="accordion-body">
                                Yes, we offer virtual property tours for many of our listings. Please mention in your inquiry that you're interested in a virtual tour, and our agents will arrange an online viewing experience that fits your schedule.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

