@{
    ViewData["Title"] = "Contact Us";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">
}

<!-- Contact Hero Section -->
<section class="hero-section" style="min-height: 40vh; padding: 4rem 0 2rem;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 fade-in" style="animation-delay: 0.1s;">
                <h1 class="hero-title">Get in <span style="background: var(--primary-gradient); -webkit-background-clip: text; background-clip: text; color: transparent;">Touch</span></h1>
                <p class="hero-text">We're here to help you with any questions you might have. Reach out to us, and our team will get back to you as soon as possible.</p>
            </div>
            <div class="col-lg-6 fade-in" style="animation-delay: 0.3s;">
                <img src="https://images.unsplash.com/photo-1570126618953-d437176e8c79" alt="Contact" class="hero-image" style="height: 400px;">
            </div>
        </div>
    </div>
</section>

<!-- Contact Info Section -->
<section class="property-section bg-white">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-4 fade-in" style="animation-delay: 0.2s;">
                <div class="card border-0 shadow-sm rounded-4 p-4 text-center h-100">
                    <div class="mb-4 mx-auto" style="width: 80px; height: 80px; background: var(--light-bg); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-geo-alt-fill" style="font-size: 2rem; background: var(--primary-gradient); -webkit-background-clip: text; background-clip: text; color: transparent;"></i>
                    </div>
                    <h3 style="font-size: 1.5rem; font-weight: 600;">Our Office</h3>
                    <p class="text-muted">123 Real Estate Street<br>Davao City, Davao del Sur<br>Philippines 8000</p>
                    <a href="https://goo.gl/maps/123" target="_blank" class="text-primary mt-auto">View on Map</a>
                </div>
            </div>
            
            <div class="col-lg-4 fade-in" style="animation-delay: 0.3s;">
                <div class="card border-0 shadow-sm rounded-4 p-4 text-center h-100">
                    <div class="mb-4 mx-auto" style="width: 80px; height: 80px; background: var(--light-bg); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-telephone-fill" style="font-size: 2rem; background: var(--primary-gradient); -webkit-background-clip: text; background-clip: text; color: transparent;"></i>
                    </div>
                    <h3 style="font-size: 1.5rem; font-weight: 600;">Call Us</h3>
                    <p class="text-muted">We're available Monday to Friday<br>8:00 AM - 6:00 PM</p>
                    <p class="text-muted">(02) 8123-4567<br>+63 918 123 4567</p>
                </div>
            </div>
            
            <div class="col-lg-4 fade-in" style="animation-delay: 0.4s;">
                <div class="card border-0 shadow-sm rounded-4 p-4 text-center h-100">
                    <div class="mb-4 mx-auto" style="width: 80px; height: 80px; background: var(--light-bg); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-envelope-fill" style="font-size: 2rem; background: var(--primary-gradient); -webkit-background-clip: text; background-clip: text; color: transparent;"></i>
                    </div>
                    <h3 style="font-size: 1.5rem; font-weight: 600;">Email Us</h3>
                    <p class="text-muted">Send us an email and we'll respond within 24 hours</p>
                    <a href="mailto:info@estateease.com" class="text-primary">info@estateease.com</a><br>
                    <a href="mailto:support@estateease.com" class="text-primary">support@estateease.com</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Social Media Section -->
<section class="property-section">
    <div class="container">
        <div class="text-center mb-5 fade-in">
            <h2 class="section-title" style="display: inline-block;">Connect With Us</h2>
            <p class="mt-4 text-muted">Follow us on social media to stay updated with the latest properties and real estate news</p>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="row g-4 text-center fade-in">
                    <div class="col-md-3 col-6">
                        <a href="#" class="text-decoration-none">
                            <div class="p-4 rounded-4 shadow-sm" style="background: linear-gradient(45deg, #3b5998, #4267B2);">
                                <i class="bi bi-facebook text-white" style="font-size: 2.5rem;"></i>
                                <h5 class="text-white mt-3 mb-0">Facebook</h5>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3 col-6">
                        <a href="#" class="text-decoration-none">
                            <div class="p-4 rounded-4 shadow-sm" style="background: linear-gradient(45deg, #1DA1F2, #0084b4);">
                                <i class="bi bi-twitter text-white" style="font-size: 2.5rem;"></i>
                                <h5 class="text-white mt-3 mb-0">Twitter</h5>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3 col-6">
                        <a href="#" class="text-decoration-none">
                            <div class="p-4 rounded-4 shadow-sm" style="background: linear-gradient(45deg, #833AB4, #C13584, #E1306C);">
                                <i class="bi bi-instagram text-white" style="font-size: 2.5rem;"></i>
                                <h5 class="text-white mt-3 mb-0">Instagram</h5>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3 col-6">
                        <a href="#" class="text-decoration-none">
                            <div class="p-4 rounded-4 shadow-sm" style="background: linear-gradient(45deg, #0077B5, #00a0dc);">
                                <i class="bi bi-linkedin text-white" style="font-size: 2.5rem;"></i>
                                <h5 class="text-white mt-3 mb-0">LinkedIn</h5>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Subscribe Section -->
<section class="cta-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center fade-in">
                <h2 class="cta-title">Subscribe to Our Newsletter</h2>
                <p class="cta-text mb-4">Stay updated with the latest properties, market trends, and real estate tips</p>
                
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="input-group">
                            <input type="email" class="form-control form-control-lg" placeholder="Your email address" aria-label="Email address">
                            <button class="btn btn-light px-4" type="button" style="color: var(--primary-color); font-weight: 600;">Subscribe</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add 'show' class to all fade-in elements with a staggered delay
            const fadeElements = document.querySelectorAll('.fade-in');
            fadeElements.forEach((el, index) => {
                setTimeout(() => {
                    el.style.opacity = '1';
                }, 100 + (index * 100));
            });
            
            // Form validation could be added here
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    // Show success message (in a real application)
                    alert('Thank you for your message! We will contact you soon.');
                    form.reset();
                });
            }
        });
    </script>
} 