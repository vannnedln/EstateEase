@{
    ViewData["Title"] = "About Us";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">
}

<!-- About Hero Section -->
<section class="hero-section" style="min-height: 40vh; padding: 4rem 0 3rem;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 fade-in" style="animation-delay: 0.1s;">
                <h1 class="hero-title">About <span style="background: var(--primary-gradient); -webkit-background-clip: text; background-clip: text; color: transparent;">EstateEase</span></h1>
                <p class="hero-text">Discover the story behind our mission to simplify real estate and provide exceptional property services to our clients</p>
            </div>
            <div class="col-lg-6 fade-in" style="animation-delay: 0.3s;">
                <img src="https://images.unsplash.com/photo-1521791136064-7986c2920216" alt="Team Meeting" class="hero-image" style="height: 400px;">
            </div>
        </div>
    </div>
</section>

<!-- Our Story Section -->
<section class="property-section bg-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0 fade-in" style="animation-delay: 0.2s;">
                <div class="position-relative">
                    <img src="https://images.unsplash.com/photo-1579389083078-4e7018379f7e" alt="Our Office" class="img-fluid rounded-4 shadow" style="width: 100%; height: 400px; object-fit: cover;">
                    <div class="position-absolute" style="bottom: -20px; right: -20px; width: 180px; height: 180px; background: var(--primary-gradient); border-radius: 50%; opacity: 0.8; z-index: -1;"></div>
                </div>
            </div>
            <div class="col-lg-6 fade-in" style="animation-delay: 0.4s;">
                <h2 class="section-title mb-4">Our Story</h2>
                <p class="mb-4">Founded in 2024, EstateEase began with a simple vision: to transform the complicated process of real estate transactions into a smooth, transparent, and enjoyable experience for everyone involved.</p>
                <p class="mb-4">What started as a small team of dedicated real estate professionals has grown into a nationwide network of agents and property specialists committed to helping clients find their dream properties and make sound investment decisions.</p>
                <p>Today, we're proud to have helped over 10,000 families find their perfect homes, and we continue to innovate and improve our services to meet the evolving needs of the real estate market.</p>
            </div>
        </div>
    </div>
</section>

<!-- Our Mission Section -->
<section class="property-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center fade-in">
                <h2 class="section-title" style="display: inline-block;">Our Mission</h2>
                <p class="mt-4">At EstateEase, we're committed to simplifying real estate by providing transparent, personalized, and professional services that put our clients' needs first. We believe everyone deserves a seamless property experience, whether they're first-time buyers or seasoned investors.</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4 fade-in" style="animation-delay: 0.2s;">
                <div class="card border-0 shadow-sm h-100 rounded-4 p-4">
                    <div class="stat-icon mx-0 mb-4" style="background: linear-gradient(45deg, #2937f0, #4154f1);">
                        <i class="bi bi-building-check"></i>
                    </div>
                    <h3 class="mb-3" style="font-size: 1.5rem; font-weight: 600;">Quality Properties</h3>
                    <p class="text-muted">We rigorously verify and vet all properties in our listings to ensure they meet our high standards for quality, value, and potential.</p>
                </div>
            </div>
            <div class="col-md-4 fade-in" style="animation-delay: 0.4s;">
                <div class="card border-0 shadow-sm h-100 rounded-4 p-4">
                    <div class="stat-icon mx-0 mb-4" style="background: linear-gradient(45deg, #7928ca, #9f1ae2);">
                        <i class="bi bi-person-hearts"></i>
                    </div>
                    <h3 class="mb-3" style="font-size: 1.5rem; font-weight: 600;">Client-Centered Approach</h3>
                    <p class="text-muted">We take the time to understand each client's unique needs and preferences, offering personalized recommendations and support throughout their journey.</p>
                </div>
            </div>
            <div class="col-md-4 fade-in" style="animation-delay: 0.6s;">
                <div class="card border-0 shadow-sm h-100 rounded-4 p-4">
                    <div class="stat-icon mx-0 mb-4" style="background: linear-gradient(45deg, #ff8f00, #ff5252);">
                        <i class="bi bi-graph-up-arrow"></i>
                    </div>
                    <h3 class="mb-3" style="font-size: 1.5rem; font-weight: 600;">Market Expertise</h3>
                    <p class="text-muted">Our team of experienced professionals stays ahead of market trends, providing valuable insights to help clients make informed decisions.</p>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 fade-in">
                <h2 class="cta-title">Ready to Work With Us?</h2>
                <p class="cta-text">Let our team of experts help you find your dream property or sell your existing one.</p>
            </div>
            <div class="col-lg-4 text-lg-end fade-in">
                <a href="@Url.Action("Contact", "Home")" class="btn-cta">Contact Us Today</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add 'show' class to all fade-in elements with a staggered delay
            const fadeElements = document.querySelectorAll('.fade-in');
            fadeElements.forEach((el, index) => {
                setTimeout(() => {
                    el.style.opacity = '1';
                }, 100 + (index * 100));
            });
        });
    </script>
} 