<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EstateEase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/agent.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="active">
            <div class="sidebar-header mb-4">
                <a class="navbar-brand d-flex align-items-center justify-content-center" asp-area="Agent" asp-controller="Home" asp-action="Index">
                    <img src="~/images/estate-ease_IT15_LOGO.png" alt="EstateEase Logo" class="me-2" style="width: 32px; height: 32px;">
                    <span class="fs-5 fw-bold text-white" style="letter-spacing: 0.5px;">EstateEase</span>
                </a>
            </div>

            <ul class="list-unstyled components">
                <li class="mb-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                    <a asp-area="Agent" asp-controller="Home" asp-action="Index" class="nav-link d-flex align-items-center">
                        <i class="bi bi-speedometer2 me-3"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="mb-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Property" ? "active" : "")">
                    <a asp-area="Agent" asp-controller="Property" asp-action="Index" class="nav-link d-flex align-items-center">
                        <i class="bi bi-house-door me-3"></i>
                        <span>Properties</span>
                    </a>
                </li>
                <li class="mb-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Appointment" ? "active" : "")">
                    <a asp-area="Agent" asp-controller="Appointment" asp-action="Index" class="nav-link d-flex align-items-center">
                        <i class="bi bi-calendar-check me-3"></i>
                        <span>Appointments</span>
                    </a>
                </li>
                <li class="mb-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Inquiry" ? "active" : "")">
                    <a asp-area="Agent" asp-controller="Inquiry" asp-action="Index" class="nav-link d-flex align-items-center">
                        <i class="bi bi-chat-dots me-3"></i>
                        <span>Inquiries</span>
                    </a>
                </li>
                <li class="mb-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Payment" ? "active" : "")">
                    <a asp-area="Agent" asp-controller="Payment" asp-action="Index" class="nav-link d-flex align-items-center">
                        <i class="bi bi-credit-card me-3"></i>
                        <span>Payments</span>
                    </a>
                </li>
                <li class="mb-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Profile" ? "active" : "")">
                    <a asp-area="Agent" asp-controller="Profile" asp-action="Index" class="nav-link d-flex align-items-center">
                        <i class="bi bi-person-circle me-3"></i>
                        <span>My Profile</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom mb-4">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-sm btn-icon">
                        <i class="bi bi-list fs-5"></i>
                    </button>

                    <div class="d-flex align-items-center ms-auto">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/images/avatar-01.png" alt="User" class="rounded-circle me-2" width="36">
                                <div class="d-none d-md-flex flex-column">
                                    <span class="fw-bold text-dark">@User.Identity?.Name</span>
                                    <small class="text-muted">Agent</small>
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="Agent" asp-controller="Profile" asp-action="Index">
                                        <i class="bi bi-person me-2"></i>My Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Agent" asp-controller="Settings" asp-action="Index">
                                        <i class="bi bi-gear me-2"></i>Settings
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <main class="px-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html> 