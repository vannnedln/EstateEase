@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-white">
                    <h1 class="text-center my-3 fw-bold gradient-text">@ViewData["Title"]</h1>
                </div>
                <div class="card-body py-4">
                    <div class="privacy-content text-center">
                        <p class="lead mb-4">Use this page to detail your site's privacy policy.</p>
                        
                        <div class="privacy-sections text-start">
                            <h4 class="mt-4 mb-3"><i class="bi bi-shield-check me-2"></i>Data Collection and Usage</h4>
                            <p>Add information about what data you collect from users and how it's used.</p>
                            
                            <h4 class="mt-4 mb-3"><i class="bi bi-person-lock me-2"></i>User Privacy Rights</h4>
                            <p>Detail what rights users have regarding their personal data.</p>
                            
                            <h4 class="mt-4 mb-3"><i class="bi bi-database-lock me-2"></i>Data Security</h4>
                            <p>Explain how you protect user data and your security measures.</p>
                            
                            <h4 class="mt-4 mb-3"><i class="bi bi-stars me-2"></i>Third-Party Services</h4>
                            <p>List any third-party services you use that may collect user data.</p>
                        </div>
                        
                        <div class="text-center mt-4">
                            <a href="#" class="btn gradient-primary-btn px-4">Download Privacy Policy</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .gradient-text {
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: inline-block;
    }
    
    .privacy-content {
        font-size: 1.05rem;
        color: #4a4a4a;
    }
    
    .privacy-sections h4 {
        color: #2937f0;
        font-weight: 600;
    }
    
    .card {
        border-radius: 1rem;
        overflow: hidden;
    }
</style> 