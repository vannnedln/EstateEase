@{
    ViewData["Title"] = "Agent Dashboard";
    Layout = "_AgentHeader"; // Changed from _AgentHeader to _AgentLayout
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Welcome to Agent Dashboard</h1>
        <a asp-area="Agent" asp-controller="Property" asp-action="Add" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Property
        </a>
    </div>

    <div class="row">
        <!-- Properties Card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-house-door text-primary fs-1 me-3"></i>
                        <div>
                            <h5 class="card-title mb-0">My Properties</h5>
                            <p class="text-muted small mb-0">Manage your property listings</p>
                        </div>
                    </div>
                    <a asp-area="Agent" asp-controller="Property" asp-action="Index" class="btn btn-primary w-100">
                        View Properties
                    </a>
                </div>
            </div>
        </div>

        <!-- Appointments Card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-calendar-check text-success fs-1 me-3"></i>
                        <div>
                            <h5 class="card-title mb-0">Appointments</h5>
                            <p class="text-muted small mb-0">Manage property viewings</p>
                        </div>
                    </div>
                    <a asp-area="Agent" asp-controller="Appointment" asp-action="Index" class="btn btn-success w-100">
                        View Appointments
                    </a>
                </div>
            </div>
        </div>

        <!-- Inquiries Card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-chat-dots text-info fs-1 me-3"></i>
                        <div>
                            <h5 class="card-title mb-0">Client Inquiries</h5>
                            <p class="text-muted small mb-0">Manage client messages</p>
                        </div>
                    </div>
                    <a asp-area="Agent" asp-controller="Inquiry" asp-action="Index" class="btn btn-info w-100">
                        View Inquiries
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Recent Activities</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <!-- Sample activities - Replace with actual data from controller -->
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">New Property Inquiry</h6>
                                <small class="text-muted">3 days ago</small>
                            </div>
                            <p class="mb-1">New inquiry received for 123 Main Street property.</p>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Upcoming Viewing</h6>
                                <small class="text-muted">Tomorrow</small>
                            </div>
                            <p class="mb-1">Property viewing scheduled for 456 Oak Avenue.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>