@{
    ViewData["Title"] = "Agent Dashboard";
    Layout = "_AgentLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0 fw-bold">Welcome Back, @User.Identity?.Name!</h4>
                <a asp-area="Agent" asp-controller="Property" asp-action="Add" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i> Add New Property
                </a>
            </div>
            <p class="text-muted">Here's what's happening with your properties today.</p>
        </div>
    </div>

    <div class="row">
        <!-- Properties Stats Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 fade-in">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-sm rounded-circle bg-primary bg-opacity-10 p-3">
                                <i class="bi bi-house-door text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="fw-semibold mb-1">12</h5>
                            <p class="text-muted mb-0">Active Properties</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 py-3">
                    <a asp-area="Agent" asp-controller="Property" asp-action="Index" class="d-flex align-items-center justify-content-between text-decoration-none">
                        <span class="text-primary fw-medium">View Details</span>
                        <i class="bi bi-arrow-right text-primary"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Appointments Stats Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 fade-in">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-sm rounded-circle bg-success bg-opacity-10 p-3">
                                <i class="bi bi-calendar-check text-success fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="fw-semibold mb-1">5</h5>
                            <p class="text-muted mb-0">Pending Appointments</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 py-3">
                    <a asp-area="Agent" asp-controller="Appointment" asp-action="Index" class="d-flex align-items-center justify-content-between text-decoration-none">
                        <span class="text-success fw-medium">View Details</span>
                        <i class="bi bi-arrow-right text-success"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Inquiries Stats Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 fade-in">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-sm rounded-circle bg-info bg-opacity-10 p-3">
                                <i class="bi bi-chat-dots text-info fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="fw-semibold mb-1">8</h5>
                            <p class="text-muted mb-0">New Inquiries</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 py-3">
                    <a asp-area="Agent" asp-controller="Inquiry" asp-action="Index" class="d-flex align-items-center justify-content-between text-decoration-none">
                        <span class="text-info fw-medium">View Details</span>
                        <i class="bi bi-arrow-right text-info"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Revenue Stats Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 fade-in">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-sm rounded-circle bg-warning bg-opacity-10 p-3">
                                <i class="bi bi-currency-dollar text-warning fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="fw-semibold mb-1">$32,584</h5>
                            <p class="text-muted mb-0">Monthly Revenue</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 py-3">
                    <a asp-area="Agent" asp-controller="Payment" asp-action="Index" class="d-flex align-items-center justify-content-between text-decoration-none">
                        <span class="text-warning fw-medium">View Details</span>
                        <i class="bi bi-arrow-right text-warning"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Properties Section -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-0 fw-bold">Recent Properties</h5>
                        <a asp-area="Agent" asp-controller="Property" asp-action="Index" class="btn btn-sm btn-light">View All</a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" style="width: 60px;">#</th>
                                    <th scope="col">Property</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Status</th>
                                    <th scope="col" style="width: 120px;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded" style="width: 40px; height: 40px; overflow: hidden;">
                                                <img src="~/images/property-placeholder.jpg" alt="Property" class="img-fluid" onerror="this.src='~/images/property-placeholder.jpg'">
                                            </div>
                                            <div class="ms-2">
                                                <h6 class="mb-0 fw-semibold">Modern Apartment</h6>
                                                <small class="text-muted">123 Main St, New York</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>Apartment</td>
                                    <td>$425,000</td>
                                    <td><span class="badge bg-success bg-opacity-10 text-success">Active</span></td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="#" class="btn btn-sm btn-light"><i class="bi bi-pencil"></i></a>
                                            <a href="#" class="btn btn-sm btn-light"><i class="bi bi-eye"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded" style="width: 40px; height: 40px; overflow: hidden;">
                                                <img src="~/images/property-placeholder.jpg" alt="Property" class="img-fluid" onerror="this.src='~/images/property-placeholder.jpg'">
                                            </div>
                                            <div class="ms-2">
                                                <h6 class="mb-0 fw-semibold">Luxury Villa</h6>
                                                <small class="text-muted">456 Oak Ave, San Francisco</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>Villa</td>
                                    <td>$1,250,000</td>
                                    <td><span class="badge bg-warning bg-opacity-10 text-warning">Pending</span></td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="#" class="btn btn-sm btn-light"><i class="bi bi-pencil"></i></a>
                                            <a href="#" class="btn btn-sm btn-light"><i class="bi bi-eye"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded" style="width: 40px; height: 40px; overflow: hidden;">
                                                <img src="~/images/property-placeholder.jpg" alt="Property" class="img-fluid" onerror="this.src='~/images/property-placeholder.jpg'">
                                            </div>
                                            <div class="ms-2">
                                                <h6 class="mb-0 fw-semibold">Family Home</h6>
                                                <small class="text-muted">789 Pine St, Chicago</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>House</td>
                                    <td>$780,000</td>
                                    <td><span class="badge bg-success bg-opacity-10 text-success">Active</span></td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="#" class="btn btn-sm btn-light"><i class="bi bi-pencil"></i></a>
                                            <a href="#" class="btn btn-sm btn-light"><i class="bi bi-eye"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activities Section -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0 fw-bold">Recent Activities</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item px-4 py-3 border-0">
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle text-center p-2 me-3">
                                    <i class="bi bi-chat-dots text-primary"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-1 fw-medium">New inquiry for 123 Main Street</p>
                                    <small class="text-muted">3 days ago</small>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item px-4 py-3 border-0">
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-success bg-opacity-10 rounded-circle text-center p-2 me-3">
                                    <i class="bi bi-calendar-check text-success"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-1 fw-medium">Viewing scheduled for 456 Oak Ave</p>
                                    <small class="text-muted">Tomorrow at 2:00 PM</small>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item px-4 py-3 border-0">
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-info bg-opacity-10 rounded-circle text-center p-2 me-3">
                                    <i class="bi bi-house-check text-info"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-1 fw-medium">New property listed successfully</p>
                                    <small class="text-muted">1 week ago</small>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item px-4 py-3 border-0">
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-warning bg-opacity-10 rounded-circle text-center p-2 me-3">
                                    <i class="bi bi-currency-dollar text-warning"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-1 fw-medium">Payment received for 789 Pine St</p>
                                    <small class="text-muted">2 weeks ago</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 py-3">
                    <a href="#" class="btn btn-light btn-sm w-100">View All Activities</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-sm {
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .table td, .table th {
            padding: 1rem;
            vertical-align: middle;
        }
        
        .badge {
            font-weight: 500;
            padding: 0.5em 0.75em;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Add animations
            setTimeout(function () {
                $('.fade-in').each(function(index) {
                    var $element = $(this);
                    setTimeout(function() {
                        $element.addClass('show');
                    }, 100 * index);
                });
            }, 100);
        });
    </script>
}