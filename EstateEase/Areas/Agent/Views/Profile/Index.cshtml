@model EstateEase.Areas.Agent.Controllers.AgentProfileViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "_AgentLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-md-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-1 fw-bold">My Profile</h4>
                    <p class="text-muted">Manage your personal information and profile settings</p>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill fs-5 me-2"></i>
                <strong>@TempData["Success"]</strong>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm fade-in">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <div class="position-relative d-inline-block">
                            <img src="~/images/avatar-01.png" alt="Profile Picture" class="rounded-circle" width="120" height="120">
                            <div class="position-absolute bottom-0 end-0">
                                <button class="btn btn-sm btn-primary rounded-circle p-2">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <h5 class="fw-bold mb-1">@($"{Model.FirstName} {Model.LastName}")</h5>
                    <p class="text-muted mb-3">Real Estate Agent</p>
                    <div class="d-flex justify-content-center gap-2">
                        <a href="#" class="btn btn-light btn-sm">
                            <i class="bi bi-twitter me-1"></i> Connect
                        </a>
                        <a href="#" class="btn btn-light btn-sm">
                            <i class="bi bi-linkedin me-1"></i> Connect
                        </a>
                    </div>
                </div>
                <div class="card-body border-top p-4">
                    <h6 class="fw-bold mb-3">Contact Information</h6>
                    <div class="mb-2">
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle text-center p-2 me-3">
                                <i class="bi bi-envelope text-primary"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">Email</small>
                                <span>@Model.Email</span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle text-center p-2 me-3">
                                <i class="bi bi-telephone text-primary"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">Phone</small>
                                <span>@Model.PhoneNumber</span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle text-center p-2 me-3">
                                <i class="bi bi-geo-alt text-primary"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">Location</small>
                                <span>@($"{Model.City}, {Model.State}")</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body border-top p-4">
                    <h6 class="fw-bold mb-3">License Information</h6>
                    <div>
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle text-center p-2 me-3">
                                <i class="bi bi-card-text text-primary"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">License Number</small>
                                <span>@Model.LicenseNumber</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm fade-in">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Edit Profile</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Index" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-medium">First Name</label>
                                <input asp-for="FirstName" class="form-control shadow-sm" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-medium">Last Name</label>
                                <input asp-for="LastName" class="form-control shadow-sm" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-medium">Email</label>
                                <input asp-for="Email" class="form-control shadow-sm" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label fw-medium">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control shadow-sm" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <h6 class="fw-bold mb-3 mt-4">Address</h6>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="AddressLine1" class="form-label fw-medium">Address Line 1</label>
                                <input asp-for="AddressLine1" class="form-control shadow-sm" />
                                <span asp-validation-for="AddressLine1" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="AddressLine2" class="form-label fw-medium">Address Line 2</label>
                                <input asp-for="AddressLine2" class="form-control shadow-sm" />
                                <span asp-validation-for="AddressLine2" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label fw-medium">City</label>
                                <input asp-for="City" class="form-control shadow-sm" />
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="State" class="form-label fw-medium">State/Province</label>
                                <input asp-for="State" class="form-control shadow-sm" />
                                <span asp-validation-for="State" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PostalCode" class="form-label fw-medium">Postal Code</label>
                                <input asp-for="PostalCode" class="form-control shadow-sm" />
                                <span asp-validation-for="PostalCode" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Country" class="form-label fw-medium">Country</label>
                                <input asp-for="Country" class="form-control shadow-sm" />
                                <span asp-validation-for="Country" class="text-danger small"></span>
                            </div>
                        </div>

                        <h6 class="fw-bold mb-3 mt-4">Professional Information</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="LicenseNumber" class="form-label fw-medium">License Number</label>
                                <input asp-for="LicenseNumber" class="form-control shadow-sm" />
                                <span asp-validation-for="LicenseNumber" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Bio" class="form-label fw-medium">Bio</label>
                                <textarea asp-for="Bio" class="form-control shadow-sm" rows="4"></textarea>
                                <span asp-validation-for="Bio" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-sm {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Add animations
            setTimeout(function () {
                $('.fade-in').addClass('show');
            }, 100);
        });
    </script>
} 