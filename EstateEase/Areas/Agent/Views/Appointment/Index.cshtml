@model IEnumerable<AppointmentViewModel>
@{
    ViewData["Title"] = "Appointments";
    Layout = "_AgentLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-1 fw-bold">Appointments</h4>
                    <p class="text-muted">Manage your property viewings and client meetings</p>
                </div>
                <a asp-area="Agent" asp-controller="Appointment" asp-action="Add" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i> Schedule Appointment
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill fs-5 me-2"></i>
                <strong>@TempData["Success"]</strong>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-circle-fill fs-5 me-2"></i>
                <strong>@TempData["Error"]</strong>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Quick Filter Tabs -->
    <div class="row mb-4">
        <div class="col-12">
            <ul class="nav nav-pills" id="appointmentTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="all-tab" data-bs-toggle="pill" data-bs-target="#all-appointments" type="button">
                        All Appointments
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="upcoming-tab" data-bs-toggle="pill" data-bs-target="#upcoming-appointments" type="button">
                        Upcoming
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="today-tab" data-bs-toggle="pill" data-bs-target="#today-appointments" type="button">
                        Today
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="completed-tab" data-bs-toggle="pill" data-bs-target="#completed-appointments" type="button">
                        Completed
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="cancelled-tab" data-bs-toggle="pill" data-bs-target="#cancelled-appointments" type="button">
                        Cancelled
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm fade-in">
                <div class="card-body p-0">
                    <div class="tab-content" id="appointmentTabsContent">
                        <div class="tab-pane fade show active" id="all-appointments" role="tabpanel">
                            <div class="table-responsive">
                                <table id="appointmentTable" class="table table-hover align-middle mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th style="width: 60px;">ID</th>
                                            <th>Client</th>
                                            <th>Property</th>
                                            <th>Date & Time</th>
                                            <th>Type</th>
                                            <th>Status</th>
                                            <th style="width: 150px;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Any())
                                        {
                                            @foreach (var appointment in Model)
                                            {
                                                <tr>
                                                    <td>@appointment.Id</td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle text-center p-2 me-2">
                                                                <i class="bi bi-person text-primary"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-1 fw-semibold">@appointment.ClientName</h6>
                                                                <p class="text-muted small mb-0">@appointment.ClientEmail</p>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <h6 class="mb-1 fw-semibold text-truncate" style="max-width: 200px;">@appointment.PropertyTitle</h6>
                                                        <p class="text-muted small mb-0 text-truncate" style="max-width: 200px;">@appointment.PropertyAddress</p>
                                                    </td>
                                                    <td>
                                                        <div>
                                                            <i class="bi bi-calendar-event text-primary me-1"></i>
                                                            <span>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</span>
                                                        </div>
                                                        <div>
                                                            <i class="bi bi-clock text-primary me-1"></i>
                                                            <span>@appointment.AppointmentTime</span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @if (appointment.AppointmentType == "Viewing")
                                                        {
                                                            <span class="badge bg-info bg-opacity-10 text-info">Viewing</span>
                                                        }
                                                        else if (appointment.AppointmentType == "Meeting")
                                                        {
                                                            <span class="badge bg-primary bg-opacity-10 text-primary">Meeting</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary bg-opacity-10 text-secondary">@appointment.AppointmentType</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (appointment.Status == "Scheduled")
                                                        {
                                                            <span class="badge bg-warning bg-opacity-10 text-warning">Scheduled</span>
                                                        }
                                                        else if (appointment.Status == "Completed")
                                                        {
                                                            <span class="badge bg-success bg-opacity-10 text-success">Completed</span>
                                                        }
                                                        else if (appointment.Status == "Cancelled")
                                                        {
                                                            <span class="badge bg-danger bg-opacity-10 text-danger">Cancelled</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary bg-opacity-10 text-secondary">@appointment.Status</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <div class="d-flex gap-1">
                                                            <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-outline-info">
                                                                <i class="bi bi-eye"></i>
                                                            </a>
                                                            <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-sm btn-outline-primary">
                                                                <i class="bi bi-pencil"></i>
                                                            </a>
                                                            @if (appointment.Status == "Scheduled")
                                                            {
                                                                <form asp-action="MarkAsCompleted" asp-route-id="@appointment.Id" method="post">
                                                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Mark as Completed">
                                                                        <i class="bi bi-check-circle"></i>
                                                                    </button>
                                                                </form>
                                                                <form asp-action="Cancel" asp-route-id="@appointment.Id" method="post">
                                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Cancel Appointment">
                                                                        <i class="bi bi-x-circle"></i>
                                                                    </button>
                                                                </form>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="7" class="text-center py-5">
                                                    <div class="d-flex flex-column align-items-center">
                                                        <i class="bi bi-calendar-x text-muted mb-3" style="font-size: 3rem;"></i>
                                                        <h5 class="fw-normal text-muted mb-2">No appointments found</h5>
                                                        <p class="text-muted mb-3">You don't have any appointments scheduled yet.</p>
                                                        <a asp-action="Add" class="btn btn-primary px-4">
                                                            <i class="bi bi-plus-circle me-2"></i>Schedule New Appointment
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- Other tabs would be populated with filtered data -->
                        <div class="tab-pane fade" id="upcoming-appointments" role="tabpanel">
                            <!-- Same table structure but filtered for upcoming appointments -->
                        </div>
                        <div class="tab-pane fade" id="today-appointments" role="tabpanel">
                            <!-- Same table structure but filtered for today's appointments -->
                        </div>
                        <div class="tab-pane fade" id="completed-appointments" role="tabpanel">
                            <!-- Same table structure but filtered for completed appointments -->
                        </div>
                        <div class="tab-pane fade" id="cancelled-appointments" role="tabpanel">
                            <!-- Same table structure but filtered for cancelled appointments -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#appointmentTable').DataTable({
                "responsive": true,
                "lengthMenu": [10, 25, 50, 100],
                "language": {
                    "search": "_INPUT_",
                    "searchPlaceholder": "Search appointments...",
                    "lengthMenu": "_MENU_ appointments per page"
                }
            });

            // Animation
            setTimeout(function() {
                $('.fade-in').addClass('show');
            }, 100);

            // Fix for tabs + datatable
            $('button[data-bs-toggle="pill"]').on('shown.bs.tab', function (e) {
                $.fn.dataTable.tables({ visible: true, api: true }).columns.adjust();
            });
        });
    </script>
} 