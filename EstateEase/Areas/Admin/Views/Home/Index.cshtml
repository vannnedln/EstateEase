@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="page-title fw-bold">Dashboard</h3>
        <p class="text-muted mb-0">Welcome to EstateEase Admin Dashboard</p>
    </div>
    
</div>

<!-- Stats Row -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 col-12 mb-4">
        <div class="card border-0 shadow-sm h-100 text-white" style="background: linear-gradient(45deg, #6937EA, #8C54FF);">
            <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h6 class="fw-normal mb-2">TOTAL PROPERTIES</h6>
                        <h1 class="display-4 fw-bold mb-0">@ViewBag.TotalProperties</h1>
                    </div>
                    <div class="card-icon">
                        <i class="bi bi-building fs-1"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 pb-3">
                <a asp-area="Admin" asp-controller="Property" asp-action="ViewPropertyList" class="text-white text-decoration-none d-flex justify-content-between align-items-center">
                    <span>View Properties</span>
                    <span class="bg-white bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                        <i class="bi bi-arrow-right text-white"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 col-12 mb-4">
        <div class="card border-0 shadow-sm h-100 text-white" style="background: linear-gradient(45deg, #1E88E5, #40C4FF);">
            <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h6 class="fw-normal mb-2">REGULAR USERS</h6>
                        <h1 class="display-4 fw-bold mb-0">@ViewBag.RegisteredUsers</h1>
                    </div>
                    <div class="card-icon">
                        <i class="bi bi-people fs-1"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 pb-3">
                <a asp-area="Admin" asp-controller="User" asp-action="UserList" class="text-white text-decoration-none d-flex justify-content-between align-items-center">
                    <span>View User List</span>
                    <span class="bg-white bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                        <i class="bi bi-arrow-right text-white"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 col-12 mb-4">
        <div class="card border-0 shadow-sm h-100 text-white" style="background: linear-gradient(45deg, #F57C00, #FFB74D);">
            <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h6 class="fw-normal mb-2">REGISTERED AGENTS</h6>
                        <h1 class="display-4 fw-bold mb-0">@ViewBag.RegisteredAgents</h1>
                    </div>
                    <div class="card-icon">
                        <i class="bi bi-person-badge fs-1"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 pb-3">
                <a asp-area="Admin" asp-controller="User" asp-action="AgentList" class="text-white text-decoration-none d-flex justify-content-between align-items-center">
                    <span>View Agents</span>
                    <span class="bg-white bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                        <i class="bi bi-arrow-right text-white"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 col-12 mb-4">
        <div class="card border-0 shadow-sm h-100 text-white" style="background: linear-gradient(45deg, #FFC107, #FFEB3B);">
            <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h6 class="fw-normal mb-2">TOTAL INCOME</h6>
                        <h1 class="display-4 fw-bold mb-0">₱@ViewBag.TotalRevenue</h1>
                        
                    </div>
                    <div class="card-icon">
                        <i class="bi bi-cash-stack fs-1"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 pb-3">
                <a asp-area="Admin" asp-controller="Transactions" asp-action="Index" class="text-white text-decoration-none d-flex justify-content-between align-items-center">
                    <span>View Payments</span>
                    <span class="bg-white bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                        <i class="bi bi-arrow-right text-white"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity and Properties -->
<div class="row">
    <!-- Recent Properties -->
    <div class="col-lg-8 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom-0 d-flex justify-content-between align-items-center py-3">
                <h5 class="card-title mb-0 fw-bold">Recent Properties</h5>
                <a asp-area="Admin" asp-controller="Property" asp-action="ViewPropertyList" class="btn btn-sm btn-primary">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Property</th>
                                <th>Location</th>
                                <th>Type</th>
                                <th>Price</th>
                                <th>Status</th>
                              
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.RecentProperties != null && ViewBag.RecentProperties.Count > 0)
                            {
                                foreach (var property in ViewBag.RecentProperties)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="property-img-sm me-3 bg-light rounded">
                                                    @if (property.PropertyImages != null && property.PropertyImages.Count > 0)
                                                    {
                                                        <img src="@property.PropertyImages[0].ImagePath" 
                                                            alt="Property" class="rounded" width="40" height="40">
                                                    }
                                                    else
                                                    {
                                                        <img src="https://via.placeholder.com/40" 
                                                            alt="Property" class="rounded" width="40" height="40">
                                                    }
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@property.Title</h6>
                                                    <small class="text-muted">ID: #@property.Id.Substring(0, 5)</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@property.Address</td>
                                        <td>@property.PropertyType</td>
                                        <td>
                                            @if (property.SellingType == "Rent")
                                            {
                                                <span>₱@property.Price.ToString("N0")/mo</span>
                                            }
                                            else
                                            {
                                                <span>₱@property.Price.ToString("N0")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (property.Status == "For Sale")
                                            {
                                                <span class="badge bg-success">For Sale</span>
                                            }
                                            else if (property.Status == "For Rent")
                                            {
                                                <span class="badge bg-primary">For Rent</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@property.Status</span>
                                            }
                                        </td>
                                        
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-4">No properties found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-lg-4 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom-0 py-3">
                <h5 class="card-title mb-0 fw-bold">Recent Activity</h5>
            </div>
            <div class="card-body p-0">
                <div class="timeline p-3">
                    @if (ViewBag.RecentActivities != null && ViewBag.RecentActivities.Count > 0)
                    {
                        foreach (var activity in ViewBag.RecentActivities)
                        {
                            <div class="timeline-item pb-3">
                                <div class="d-flex">
                                    @if (activity.Type == "UserRegistration")
                                    {
                                        <div class="timeline-icon bg-primary-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="bi bi-person-plus text-primary"></i>
                                        </div>
                                        <div>
                                            <p class="mb-1">New user <strong>@activity.Name</strong> registered</p>
                                            <small class="text-muted">@GetTimeAgo(activity.Date)</small>
                                        </div>
                                    }
                                    else if (activity.Type == "PropertyListing")
                                    {
                                        <div class="timeline-icon bg-success-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="bi bi-house-add text-success"></i>
                                        </div>
                                        <div>
                                            <p class="mb-1">New property <strong>@activity.Name</strong> added</p>
                                            <small class="text-muted">@GetTimeAgo(activity.Date)</small>
                                        </div>
                                    }
                                    else if (activity.Type == "Transaction")
                                    {
                                        <div class="timeline-icon bg-info-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="bi bi-currency-dollar text-info"></i>
                                        </div>
                                        <div>
                                            <p class="mb-1">Payment received for <strong>₱@activity.Amount.ToString("N0")</strong></p>
                                            <small class="text-muted">@GetTimeAgo(activity.Date)</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="p-3 text-center">
                            <p class="text-muted">No recent activities</p>
                        </div>
                    }
                </div>
            </div>
            
        </div>
    </div>
</div>

<!-- Analytics Row -->
<div class="row">
    <!-- Listings Analytics -->
    <div class="col-12 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom-0 d-flex justify-content-between align-items-center py-3">
                <h5 class="card-title mb-0 fw-bold">Property Distribution</h5>
                <div class="dropdown">
                    <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        By Type
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">By Location</a></li>
                        <li><a class="dropdown-item" href="#">By Status</a></li>
                        <li><a class="dropdown-item" href="#">By Type</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div id="propertyChart" style="height: 350px;"></div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetTimeAgo(DateTime dateTime)
    {
        TimeSpan timeSince = DateTime.Now.Subtract(dateTime);
        
        if (timeSince.TotalDays > 30)
            return dateTime.ToString("MMM d, yyyy");
        if (timeSince.TotalDays > 1)
            return $"{(int)timeSince.TotalDays} days ago";
        if (timeSince.TotalHours > 1)
            return $"{(int)timeSince.TotalHours} hours ago";
        if (timeSince.TotalMinutes > 1)
            return $"{(int)timeSince.TotalMinutes} minutes ago";
        
        return "Just now";
    }
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/apexcharts@3.40.0/dist/apexcharts.min.css">
    <style>
        .hover-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        
        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
        
        .dashboard-icon-container {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .dashboard-icon-container i {
            font-size: 24px;
        }
        
        /* New card styles */
        .card {
            overflow: hidden;
            border-radius: 12px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15) !important;
        }
        
        .card-icon {
            opacity: 0.8;
        }
        
        .display-4 {
            font-size: 2.5rem;
            font-weight: 700;
        }
        
        @* CSS media queries need to be escaped in Razor *@
        @@media (max-width: 1400px) {
            .display-4 {
                font-size: 2rem;
            }
        }
        
        @@media (max-width: 576px) {
            .display-4 {
                font-size: 1.8rem;
            }
        }
        
        .timeline-icon {
            width: 36px;
            height: 36px;
            flex-shrink: 0;
        }
        
        .timeline-item {
            position: relative;
        }
        
        .timeline-item:not(:last-child)::after {
            content: '';
            position: absolute;
            left: 18px;
            top: 36px;
            bottom: 0;
            width: 1px;
            background-color: #e9ecef;
        }
        
        .btn-icon {
            width: 32px;
            height: 32px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
        
        .property-img-sm {
            width: 40px;
            height: 40px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.40.0/dist/apexcharts.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Property Distribution Chart
            var propertyChartOptions = {
                series: [@Html.Raw(ViewBag.PropertyTypeCounts) || [1]], // Use data from controller or fallback
                chart: {
                    type: 'donut',
                    height: 350,
                    fontFamily: 'Poppins, sans-serif',
                    animations: {
                        enabled: true,
                        easing: 'easeinout',
                        speed: 800,
                        animateGradually: {
                            enabled: true,
                            delay: 150
                        },
                        dynamicAnimation: {
                            enabled: true,
                            speed: 350
                        }
                    }
                },
                labels: [@Html.Raw("'" + ViewBag.PropertyTypeLabels + "'") || ['No Data']],
                colors: ['#6937EA', '#1E88E5', '#F57C00', '#FFC107', '#00d09c'],
                legend: {
                    position: 'bottom',
                    formatter: function(seriesName, opts) {
                        return [seriesName, ' - ', opts.w.globals.series[opts.seriesIndex]]
                    }
                },
                plotOptions: {
                    pie: {
                        donut: {
                            size: '65%',
                            labels: {
                                show: true,
                                name: {
                                    show: true,
                                    fontSize: '16px',
                                    fontWeight: 600
                                },
                                value: {
                                    show: true,
                                    fontSize: '20px',
                                    fontWeight: 700,
                                    formatter: function (val) {
                                        return val
                                    }
                                },
                                total: {
                                    show: true,
                                    label: 'Total',
                                    formatter: function (w) {
                                        return w.globals.seriesTotals.reduce((a, b) => {
                                            return a + b
                                        }, 0)
                                    }
                                }
                            }
                        }
                    }
                },
                dataLabels: {
                    enabled: false
                },
                responsive: [{
                    breakpoint: 480,
                    options: {
                        chart: {
                            height: 300
                        },
                        legend: {
                            position: 'bottom'
                        }
                    }
                }]
            };

            var propertyChart = new ApexCharts(document.querySelector("#propertyChart"), propertyChartOptions);
            propertyChart.render();
        });
    </script>
}