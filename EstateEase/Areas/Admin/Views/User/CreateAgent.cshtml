@model EstateEase.Areas.Admin.Controllers.CreateAgentViewModel
@{
    ViewData["Title"] = "Create Agent";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4 rounded-4">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header position-relative overflow-hidden py-4"
                    style="background: linear-gradient(45deg, #2937f0, #9f1ae2);">
                    <h5 class="card-title mb-0 fw-bold ps-2 text-white">
                        Create New Agent Account
                    </h5>
                    <div class="position-absolute top-50 end-0 translate-middle-y me-4 opacity-25">
                        <i class="bi bi-person-plus-fill display-1 text-white"></i>
                    </div>
                </div>

                <div class="card-body p-5">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show border-0 rounded-3 shadow-sm" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-exclamation-circle-fill fs-4 me-2"></i>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="CreateAgent" method="post">
                        <div class="card mb-4 border-0 shadow-sm">
                            <div class="card-header bg-light">
                                <h6 class="mb-0 fw-bold">Personal Information</h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="FirstName" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-person"></i>
                                                </span>
                                                <input asp-for="FirstName" class="form-control border-0 shadow-sm" placeholder="Enter first name" />
                                            </div>
                                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="LastName" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-person-fill"></i>
                                                </span>
                                                <input asp-for="LastName" class="form-control border-0 shadow-sm" placeholder="Enter last name" />
                                            </div>
                                            <span asp-validation-for="LastName" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="Email" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-envelope"></i>
                                                </span>
                                                <input asp-for="Email" class="form-control border-0 shadow-sm" placeholder="example@estateease.com" />
                                            </div>
                                            <span asp-validation-for="Email" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="PhoneNumber" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-telephone"></i>
                                                </span>
                                                <input asp-for="PhoneNumber" class="form-control border-0 shadow-sm" placeholder="+1 (123) 456-7890" />
                                            </div>
                                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="DateOfBirth" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-calendar-date"></i>
                                                </span>
                                                <input asp-for="DateOfBirth" class="form-control border-0 shadow-sm" type="date" />
                                            </div>
                                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="LicenseNumber" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-card-text"></i>
                                                </span>
                                                <input asp-for="LicenseNumber" class="form-control border-0 shadow-sm" placeholder="Enter license number" />
                                            </div>
                                            <span asp-validation-for="LicenseNumber" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card mb-4 border-0 shadow-sm">
                            <div class="card-header bg-light">
                                <h6 class="mb-0 fw-bold">Address Information</h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <div class="form-group mb-3">
                                            <label asp-for="AddressLine1" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-house"></i>
                                                </span>
                                                <input asp-for="AddressLine1" class="form-control border-0 shadow-sm" placeholder="Enter street address" />
                                            </div>
                                            <span asp-validation-for="AddressLine1" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <div class="form-group mb-3">
                                            <label asp-for="AddressLine2" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-house-fill"></i>
                                                </span>
                                                <input asp-for="AddressLine2" class="form-control border-0 shadow-sm" placeholder="Apartment, suite, unit, etc. (optional)" />
                                            </div>
                                            <span asp-validation-for="AddressLine2" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="City" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-building"></i>
                                                </span>
                                                <input asp-for="City" class="form-control border-0 shadow-sm" placeholder="Enter city" />
                                            </div>
                                            <span asp-validation-for="City" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="State" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-geo-alt"></i>
                                                </span>
                                                <input asp-for="State" class="form-control border-0 shadow-sm" placeholder="Enter state/province" />
                                            </div>
                                            <span asp-validation-for="State" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="PostalCode" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-mailbox"></i>
                                                </span>
                                                <input asp-for="PostalCode" class="form-control border-0 shadow-sm" placeholder="Enter postal code" />
                                            </div>
                                            <span asp-validation-for="PostalCode" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="Country" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-globe"></i>
                                                </span>
                                                <input asp-for="Country" class="form-control border-0 shadow-sm" placeholder="Enter country" />
                                            </div>
                                            <span asp-validation-for="Country" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card mb-4 border-0 shadow-sm">
                            <div class="card-header bg-light">
                                <h6 class="mb-0 fw-bold">Account Information</h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="Password" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-key"></i>
                                                </span>
                                                <input asp-for="Password" class="form-control border-0 shadow-sm" />
                                            </div>
                                            <span asp-validation-for="Password" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="ConfirmPassword" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-key-fill"></i>
                                                </span>
                                                <input asp-for="ConfirmPassword" class="form-control border-0 shadow-sm" />
                                            </div>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <div class="form-group mb-3">
                                            <label asp-for="Bio" class="form-label fw-medium"></label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-0">
                                                    <i class="bi bi-file-text"></i>
                                                </span>
                                                <textarea asp-for="Bio" class="form-control border-0 shadow-sm" rows="4" placeholder="Enter agent biography/description"></textarea>
                                            </div>
                                            <span asp-validation-for="Bio" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 d-flex gap-3">
                            <button type="submit" class="btn btn-primary px-4 py-2 shadow-sm">
                                <i class="bi bi-person-plus-fill me-2"></i>Create Agent
                            </button>
                            <a asp-action="AgentList" class="btn btn-light px-4 py-2 shadow-sm">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }

        /* Animation styles */
        .card {
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.5s ease-out;
        }

        .card.show {
            opacity: 1;
            transform: translateY(0);
        }

        .form-control, .input-group-text {
            padding: 0.75rem 1rem;
            font-size: 0.875rem;
        }

        .input-group-text {
            min-width: 45px;
        }

        .btn {
            border-radius: 0.5rem;
            font-weight: 500;
        }

        .btn-primary {
            background: linear-gradient(45deg, #2937f0, #9f1ae2);
            border: none;
        }

        .btn-primary:hover {
            background: linear-gradient(45deg, #232cc5, #8516bd);
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Add animations
            setTimeout(function () {
                $('.card').addClass('show');
            }, 100);
        });
    </script>
} 