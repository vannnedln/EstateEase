@model IEnumerable<EstateEase.Models.ViewModels.PropertyViewModel>
@{
    ViewData["Title"] = "View Properties";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm mb-4">
            <div class="card-header py-4 bg-dark text-white">
                <h5 class="card-title mb-0 fw-bold">Property List</h5>
            </div>

            <div class="card-body p-5">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                        <i class="bi bi-check-circle me-2"></i>
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <table id="myTable" class="table">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Property Type</th>
                            <th>Selling Type</th>
                            <th>Price (â‚±)</th>
                            <th>Area (sq m)</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>@item.PropertyType</td>
                                <td>@item.SellingType</td>
                                <td>@item.Price</td>
                                <td>@item.Size</td>
                                <td>@item.Status</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="View" asp-route-id="@item.Id" class="btn btn-dark btn-sm">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/lib/datatables/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }

        .table {
            font-size: 14px;
        }

        .btn {
            font-weight: 500;
        }

        .card-title {
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: '<"row align-items-center"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                    '<"row"<"col-sm-12"tr>>' +
                    '<"row align-items-center"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search...",
                    lengthMenu: "_MENU_ records per page"
                },
                pageLength: 10,
                responsive: true
            });
        });
    </script>
}