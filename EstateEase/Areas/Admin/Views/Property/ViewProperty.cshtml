@{
    ViewData["Title"] = "View Properties";
    Layout = "_AdminLayout";
}

<div class="content container-fluid">
    <div class="page-header bg-light rounded p-4 mb-4 shadow-sm">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="page-title mb-1">Property List</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Properties</li>
                    </ol>
                </nav>
            </div>
            <a href="@Url.Action("Add", "Property", new { area = "Admin" })" class="btn btn-dark">
                <i class="bi bi-plus-lg me-2"></i>Add New Property
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table id="property-table" class="table table-hover align-middle nowrap w-100">
                    <thead>
                        <tr class="bg-light">
                            <th>ID</th>
                            <th>Title</th>
                            <th>Type</th>
                            <th>BHK</th>
                            <th>Selling Type</th>
                            <th>Area</th>
                            <th>Price</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th>Added Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/lib/datatables/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/responsive.bootstrap5.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.responsive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#property-table').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetProperties", "Property", new { area = "Admin" })',
                    type: 'GET'
                },
                columns: [
                    { data: 'id' },
                    { data: 'title' },
                    { data: 'propertyType' },
                    { data: 'bhk' },
                    { data: 'sellingType' },
                    {
                        data: 'size',
                        render: function (data) {
                            return `${parseFloat(data).toFixed(2)} m²`;
                        }
                    },
                    {
                        data: 'price',
                        render: function (data) {
                            return `₹${parseFloat(data).toLocaleString('en-IN')}`;
                        }
                    },
                    { data: 'address' },
                    {
                        data: 'status',
                        render: function (data) {
                            let badgeClass = 'bg-secondary';
                            switch (data.toLowerCase()) {
                                case 'available':
                                    badgeClass = 'bg-success';
                                    break;
                                case 'sold':
                                    badgeClass = 'bg-danger';
                                    break;
                                case 'rented':
                                    badgeClass = 'bg-info';
                                    break;
                            }
                            return `<span class="badge ${badgeClass}">${data}</span>`;
                        }
                    },
                    {
                        data: 'createdAt',
                        render: function (data) {
                            return moment(data).format('DD/MM/YYYY');
                        }
                    },
                    {
                        data: 'id',
                        orderable: false,
                        searchable: false,
                        render: function (data) {
                            return `
                                <div class="btn-group">
                                    <a href="/Admin/Property/Edit/${data}" class="btn btn-info btn-sm">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-danger btn-sm" onclick="deleteProperty(${data})">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>`;
                        }
                    }
                ]
            });
        });

        function deleteProperty(id) {
            if (confirm('Are you sure you want to delete this property?')) {
                $.ajax({
                    url: `/Admin/Property/Delete/${id}`,
                    type: 'POST',
                    success: function (result) {
                        if (result.success) {
                            $('#property-table').DataTable().ajax.reload();
                            showAlert('success', 'Property deleted successfully!');
                        } else {
                            showAlert('error', 'Failed to delete property.');
                        }
                    },
                    error: function () {
                        showAlert('error', 'An error occurred while deleting the property.');
                    }
                });
            }
        }

        function showAlert(type, message) {
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const icon = type === 'success' ? 'bi-check-circle' : 'bi-exclamation-circle';
            
            const alert = `
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    <i class="bi ${icon} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>`;
            
            $('.content').prepend(alert);
            setTimeout(() => {
                $('.alert').alert('close');
            }, 3000);
        }
    </script>
}