<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EstateEase Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <!-- Change this line -->
    @await Html.PartialAsync("_AdminHeader")

    <div class="sidebar" id="sidebar">
        <div class="sidebar-inner">
            <div id="sidebar-menu" class="sidebar-menu">
                <ul>
                    <li class="menu-title">Main</li>
                    <li>
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house"></i> <span>Dashboard</span>
                        </a>
                    </li>

                    <li class="menu-title">User Management</li>
                    <li class="submenu">
                        <a href="#"><i class="bi bi-people"></i> <span>All Users</span> <span class="menu-arrow"><i
                                    class="bi bi-chevron-right"></i></span></a>
                        <ul>
                            <li><a asp-area="Admin" asp-controller="Users" asp-action="AdminList">Admin</a></li>
                            <li><a asp-area="Admin" asp-controller="Users" asp-action="UserList">Users</a></li>

                        </ul>
                    </li>



                    <li class="menu-title">Property Management</li>
                    <li class="submenu">
                        <a href="#"><i class="bi bi-building"></i> <span>Property</span> <span class="menu-arrow"><i
                                    class="bi bi-chevron-right"></i></span></a>
                        <ul>
                            <li><a asp-area="Admin" asp-controller="Property" asp-action="Add">Add Property</a></li>
                            <li><a asp-area="Admin" asp-controller="Property" asp-action="ViewProperty">View
                                    Property</a></li>
                        </ul>
                    </li>

                    <li class="menu-title">Transactions</li>
                    <li class="submenu">
                        <a href="#"><i class="bi bi-cash"></i> <span>Payments</span> <span class="menu-arrow"><i
                                    class="bi bi-chevron-right"></i></span></a>
                        <ul>
                            <li><a asp-area="Admin" asp-controller="Query" asp-action="ManagePayments">Manage
                                    Payments</a></li>
                            <li><a asp-area="Admin" asp-controller="Query" asp-action="ViewPayments">View Payments</a>
                            </li>
                        </ul>
                    </li>


                </ul>
            </div>
        </div>
    </div>

    <div class="page-wrapper">
        <div class="content container-fluid">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            // Mobile sidebar toggle
            $('#mobile_btn, #toggle_btn').on('click', function () {
                $(this).toggleClass('active');
                $('#sidebar').toggleClass('show-sidebar');
                $('.page-wrapper').toggleClass('slide-content');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>