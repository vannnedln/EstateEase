@page
@model RegisterModel
@{
    ViewData["Title"] = "Create an account";































    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EstateEase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EstateEase.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body>
    <partial name="_NavbarPartial" />

    <main role="main">
        <div class="container my-5" style=" font-family: 'Poppins' , sans-serif;">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card border-0 shadow-lg rounded-5 p-5" style="border-radius: 30px !important;">
                        <div class="card-body">
                            <div class="mb-5 text-center">
                                <h3 class="fw-bold">Create Account</h3>
                            </div>

                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Input.FirstName" class="form-control"
                                                style="border-radius: 15px;" autocomplete="given-name"
                                                placeholder="John" />
                                            <label asp-for="Input.FirstName" class="form-label">First Name</label>
                                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Input.LastName" class="form-control"
                                                style="border-radius: 15px;" autocomplete="family-name"
                                                placeholder="Doe" />
                                            <label asp-for="Input.LastName" class="form-label">Last Name</label>
                                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Email" class="form-control" style="border-radius: 15px;"
                                        autocomplete="username" placeholder="name@example.com" />
                                    <label asp-for="Input.Email" class="form-label">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>



                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Password" class="form-control" style="border-radius: 15px;"
                                        autocomplete="new-password" placeholder="password" />
                                    <label asp-for="Input.Password" class="form-label">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.ConfirmPassword" class="form-control"
                                        style="border-radius: 15px;" autocomplete="new-password"
                                        placeholder="confirm password" />
                                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-dark w-100 py-3 mb-4" style="border-radius: 15px;">
                                    Create Account
                                </button>

                                <div class="text-center">
                                    <p class="text-muted mb-4">Or register with</p>
                                    <div class="d-flex gap-2 justify-content-center mb-4">
                                        <button type="button" class="btn btn-outline-secondary flex-grow-1 py-3"
                                            style="border-radius: 12px;">
                                            <img src="https://www.google.com/favicon.ico" alt="Google"
                                                style="width: 18px; height: 18px;" class="me-2">
                                            Google
                                        </button>

                                    </div>
                                </div>
                                <div class="text-center">

                                    <hr class="my-4">
                                    <p class="mb-0 fs-6">Already have an account?
                                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                                            class="text-decoration-none fw-semibold">Sign in</a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("#registerForm").on("submit", function (e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    return false;
                }
                return true;
            });
        });
    </script>
</body>

</html>
