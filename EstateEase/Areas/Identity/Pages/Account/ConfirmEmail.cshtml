@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-5 p-5" style="border-radius: 30px !important;">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="card-title mb-4 fw-bold">@ViewData["Title"]</h3>

                    @if (Model.StatusMessage.Contains("Error"))



                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-circle me-2"></i>
                            @Model.StatusMessage
                        </div>
                    }



                    else



                    {
                        <div class="alert alert-success" role="alert">
                            <i class="bi bi-check-circle me-2"></i>
                            @Model.StatusMessage
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-page="./Login" class="btn btn-dark px-4 py-2" style="border-radius: 15px;">
                            Go to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

