@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container my-5 pt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <i class="bi bi-box-arrow-right text-primary" style="font-size: 3rem;"></i>
                    <h2 class="mt-3 mb-3">@ViewData["Title"]</h2>
                    
                    @{
                        if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <p>Are you sure you want to logout?</p>
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
                                <button type="submit" class="btn btn-primary px-4 py-2">Confirm Logout</button>
                            </form>
                        }
                        else
                        {
                            <p>You have successfully logged out of the application.</p>
                            <a href="/" class="btn btn-primary px-4 py-2 mt-3">Return to Home</a>
                            
                            <script>
                                // Auto redirect to home page after 2 seconds
                                setTimeout(function() {
                                    window.location.href = '/';
                                }, 2000);
                            </script>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
